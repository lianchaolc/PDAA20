<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/u20"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75y"
            android:background="@color/blue_title"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_30x"
                android:src="@drawable/u24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周转信息扫描"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/title_text_size" />
            <ImageView
                android:id="@+id/zhouzhuan_back"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_75x"
                android:src="@drawable/back_change" />
        </LinearLayout>
  
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_marginLeft="30sp"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_90y"
            android:textColor="#CD5C5C"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_40"
            android:text="请扫描周转箱编号......" />
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1y"
            android:background="@drawable/u25"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="30sp"
            android:textColor="#CD5C5C"
            android:textSize="@dimen/text_size_35"
            android:gravity="center_vertical"
            android:text="周转箱编号:"
            tools:ignore="all"/>

        <TextView
            android:id="@+id/zzx_smbhao"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="@dimen/dimen_60y"
            android:textColor="#000000"
            
            android:textSize="@dimen/text_size_50"
            android:text="" />
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1y"
            android:background="@drawable/u25"/>
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="30sp"
            android:textColor="#CD5C5C"
            android:textSize="@dimen/text_size_35"
            android:gravity="center_vertical"
            android:text="所属机构:"
            tools:ignore="all"/>

        <TextView
            android:id="@+id/zzx_ssjigou"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="@dimen/dimen_60y"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_35"
            android:text="" />
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1y"
            android:background="@drawable/u25"/>
        
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="30sp"
            android:textColor="#CD5C5C"
            android:textSize="@dimen/text_size_35"
            android:gravity="center_vertical"
            android:text="所属线路:"
            tools:ignore="all"/>

        <TextView
            android:id="@+id/zzx_ssxl"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="@dimen/dimen_60y"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_35"
            android:text="" />
      
             
    </LinearLayout>

</LinearLayout>
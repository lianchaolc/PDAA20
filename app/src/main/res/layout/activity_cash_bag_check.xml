<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.sql.CashBagCheckActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="钞袋尾零新增"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_50"
            tools:ignore="all" />

        <Button
            android:id="@+id/ql_ruku_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_4y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cash_bag_lin_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1y"
                    android:background="@color/back" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_50y"
                    android:layout_marginTop="@dimen/dimen_10y"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10x"
                        android:layout_weight="1.0"
                        android:text="版别"
                        android:textColor="@color/blue_top"
                        android:textSize="40sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5x"
                        android:layout_weight="1.3"
                        android:text="劵别"
                        android:textColor="@color/blue_top"
                        android:textSize="40sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="状态"
                        android:textColor="@color/blue_top"
                        android:textSize="40sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="数量"
                        android:textColor="@color/blue_top"
                        android:textSize="40sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/cash_bag_tailzerotopackgeslistview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/white"></ListView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50y">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/cash_bag_tailzero_heji_weiling"
                    android:text="合计："
                    android:textColor="@color/red"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/cash_bag_tailzero_heji_weiling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0"
                    android:textColor="@color/back"
                    android:textSize="40sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_1y"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginRight="@dimen/dimen_20x"
                android:background="@drawable/gradient_white_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_65y"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30x"
                        android:text="劵别："
                        android:textColor="@color/blue_top"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_cash_tailzeroto_spinner_layout"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/cash_bag_tailzeroto_spinner_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_60y"
                        android:layout_marginRight="@dimen/dimen_20x"
                        android:background="@drawable/money_count"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_5x"
                        android:text="请选择"
                        android:textColor="@color/back"
                        android:textSize="40sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_1y"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginRight="@dimen/dimen_20x"
                android:background="@drawable/gradient_white_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_65y"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30x"
                        android:text="版别："
                        android:textColor="@color/blue_top"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cash_bag_tailzerotbanbie_spinner_layout"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/cash_bag_tailzeroto_banbie_spinner_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_60y"
                        android:layout_marginRight="@dimen/dimen_20x"
                        android:background="@drawable/money_count"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_5x"
                        android:text="请选择"
                        android:textColor="@color/back"
                        android:textSize="40sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_65y"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30x"
                        android:text="状态："
                        android:textColor="@color/blue_top"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cash_bag_taizero_spinner_layout_zhuangtai"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/cash_bag_taizero_spinner_text_zhuangtai"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_60y"
                        android:layout_marginRight="@dimen/dimen_20x"
                        android:background="@drawable/money_count"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_5x"
                        android:text="请选择"
                        android:textColor="@color/back"
                        android:textSize="40sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_65y"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30x"
                        android:text="数量:"
                        android:textColor="@color/blue_top"
                        android:textSize="40sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/cash_bag_tailzeroet"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_marginRight="@dimen/dimen_20x"
                    android:layout_weight="0.5"
                    android:hint="请输入数量"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="8"
                    android:numeric="integer"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginBottom="@dimen/dimen_5y"
                android:gravity="right">

                <Button
                    android:id="@+id/cash_bag_tailzero_xianjin_tianjia"
                    android:layout_width="@dimen/dimen_160x"
                    android:layout_height="@dimen/dimen_60y"
                    android:background="@color/white"
                    android:text="添加"
                    android:textColor="@color/red"
                    android:textSize="45sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_1y"
                android:background="@color/back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginTop="@dimen/dimen_10y"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center|left"
                    android:text="已读卡:"
                    android:textColor="@color/bule_main"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:id="@+id/cash_bag_tailzero_readcard"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:gravity="center|right"
                    android:text=""
                    android:textColor="@color/bule_main"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="券别"
                    android:textColor="@color/bule_main"
                    android:textSize="30sp"></TextView>

                <TextView
                    android:id="@+id/cash_bag_tailzert_quanbie"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/back"
                    android:textSize="30sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="版别"
                    android:textColor="@color/bule_main"
                    android:textSize="30sp"></TextView>

                <TextView
                    android:id="@+id/cash_bag_tailzert_banbie"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/back"
                    android:textSize="30sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="状态"
                    android:textColor="@color/bule_main"
                    android:textSize="30sp"></TextView>

                <TextView
                    android:id="@+id/cash_bag_tailzert_zhuangtai"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/back"
                    android:textSize="30sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80y"
                android:layout_marginBottom="@dimen/dimen_40y"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_marginTop="@dimen/dimen_10y"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cash_bag_hbt_tailzmakecard_btn"
                    android:layout_width="@dimen/dimen_60x"
                    android:layout_height="@dimen/dimen_80y"
                    android:layout_marginRight="@dimen/dimen_10x"
                    android:layout_weight="1"
                    android:background="@drawable/buttom_selector_bg"
                    android:text="读卡"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <Button
                    android:id="@+id/cash_bag_tailztoredadupdata_btn"
                    android:layout_width="@dimen/dimen_60x"
                    android:layout_height="@dimen/dimen_80y"
                    android:layout_marginLeft="@dimen/dimen_10x"
                    android:layout_weight="1"
                    android:background="@drawable/buttom_selector_bg"
                    android:text="提交"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />
            </LinearLayout>

            <ListView
                android:id="@+id/cashbaglistshow"
                android:layout_width="match_parent"
                android:layout_height="400px"

                />

            <Button
                android:id="@+id/cashbagadd"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:text="添加"
                android:textColor="@color/back"
                android:textSize="30px" />

            <Button
                android:id="@+id/cashbagselect"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:text="查询 "
                android:textColor="@color/back"
                android:textSize="30px" />

            <TextView
                android:id="@+id/cashbagshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50y" >
        <fragment
            android:id="@+id/fragment1"
            android:name="com.ljsw.tjbankpda.yy.fragment.LoginYayunUserInfoFragment"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75y"
            android:background="@color/blue_title"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:src="@drawable/u24"
                tools:ignore="all"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:text="线路名称"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/title_text_size"
                tools:ignore="all"/>

            <ImageView
                android:id="@+id/yyrw_update"
                android:layout_marginLeft="@dimen/dimen_70x"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:src="@drawable/replace" />

            <ImageView
                android:id="@+id/yayun_backS1"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:src="@drawable/back_change" />
        </LinearLayout>

        <TextView
            android:id="@+id/yy_XianluName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75y"
            android:gravity="center"
            android:text="西青支行一线"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_40" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75y"
            android:background="@drawable/u22"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:src="@drawable/u24"
                tools:ignore="all"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务列表"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_40"
                tools:ignore="all"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_150x"
                android:background="@drawable/u40"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/text_size_45" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_11y"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/u49"
                    android:gravity="center"
                    android:text="机构名称"
                    android:textColor="#CD5C5C"
                    android:textSize="@dimen/text_size_35" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/u49"
                    android:gravity="center"
                    android:text="请领任务"
                    android:textColor="#CD5C5C"
                    android:textSize="@dimen/text_size_35" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/u49"
                    android:gravity="center"
                    android:text="上缴任务"
                    android:textColor="#CD5C5C"
                    android:textSize="@dimen/text_size_35" />
            </LinearLayout>

            <ListView
                android:id="@+id/yylistView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
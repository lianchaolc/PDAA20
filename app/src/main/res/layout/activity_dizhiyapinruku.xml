<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1f1f1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="抵制押品入库"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/ql_ruku_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_4y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:layout_marginRight="@dimen/dimen_8x"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="操作人:"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/dizhiyapin_tvusername1"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_weight="1.8"
                android:gravity="center|left"
                android:text="张三"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:layout_marginRight="@dimen/dimen_8x"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text=""
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/tvusername2"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text=""
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEEEE"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:gravity="center|left"
            android:text="任务列表"
            android:textColor="@color/blue_title"
            android:textSize="@dimen/text_size_30" />
    </LinearLayout>
<LinearLayout
			      
			      android:layout_width="match_parent"
			      android:layout_marginLeft="@dimen/dimen_10x"
			      android:layout_marginRight="@dimen/dimen_10x"
			      android:layout_marginTop="@dimen/dimen_10y"
			      android:layout_height="@dimen/dimen_60y"
			        android:layout_gravity="center"
			      android:orientation="horizontal" >

			      <View
			          android:layout_width="@dimen/dimen_1x"
			          android:layout_height="match_parent"
			          android:background="#EFEEEE" >
			      </View>

			      <TextView
			          android:id="@+id/lv_dizhiyapinid"
			          android:layout_width="@dimen/dimen_0x"
			          android:layout_height="match_parent"
			      
			          android:layout_weight="1"
			          android:gravity="center"
			          android:text="序号"
			             android:background="@drawable/tv_boder"
			          android:textColor="@color/back"
			          android:textSize="@dimen/text_size_30" />

			      <View
			          android:layout_width="@dimen/dimen_1x"
			          android:layout_height="match_parent"
			          android:background="#EFEEEE" >
			      </View>

			      <TextView
			          android:id="@+id/dizhiyapinitem"
			          android:layout_width="@dimen/dimen_0x"
			         android:layout_height="match_parent"
			          android:layout_weight="2.3"
			          android:gravity="center"
			             android:background="@drawable/tv_boder"
			          android:text="任务编号"
			          android:textColor="@color/back"
			          android:textSize="@dimen/text_size_30" />

			      <View
			          android:layout_width="@dimen/dimen_1x"
			          android:layout_height="match_parent"
			          android:background="#EFEEEE" >
			      </View>
			      <TextView
                android:id="@+id/dizhiyapintype"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tv_boder"
                android:gravity="center"
                android:text="袋数"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />

			      <View
			          android:layout_width="@dimen/dimen_1x"
			          android:layout_height="match_parent"
			          android:background="#EFEEEE" >
			      </View>
			  </LinearLayout>
	

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/dzyp_weilistview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#00000000" >
            </ListView>
        </LinearLayout>
</LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:orientation="vertical"
    android:background="#43536e"
    android:gravity="center_horizontal"
    android:id="@+id/loginparent">

    <LinearLayout
        
        android:gravity="center"
        android:layout_marginBottom="@dimen/dimen_10y"
        android:id="@+id/netmsg"
        android:layout_width="@dimen/dimen_430x"
        android:layout_height="@dimen/dimen_70y"
        android:orientation="vertical" >

        <TextView
            android:background="@drawable/login_system_bg"
            android:gravity="center"
            android:visibility="gone"
            android:padding="15px"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/back"
            android:id="@+id/netmsgtext"
            android:layout_width="@dimen/dimen_430x"
            android:layout_height="wrap_content"
            android:text="当前网络连接失败" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:background="@drawable/login_system_bg"
        android:layout_width="@dimen/dimen_430x"
        android:layout_height="@dimen/dimen_352y"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_165y"
            android:layout_marginTop="@dimen/dimen_18y"
            android:background="@drawable/edit_bottom"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_70x"
                android:layout_marginBottom="@dimen/dimen_25y"
                android:id="@+id/PDAsetting"
                android:layout_width="@dimen/dimen_70x"
                android:layout_height="@dimen/dimen_70y"
                android:src="@drawable/loginimage" />

            <TextView
                android:layout_marginTop="@dimen/dimen_13y"
                android:id="@+id/textView1"
                android:textSize="@dimen/text_size_35"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"              
                android:layout_marginBottom="@dimen/dimen_25y"
                android:text="系统登录" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/edit_bottom"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80y" >

            <EditText
                android:textSize="@dimen/text_size_35"               
                android:singleLine="true"
                android:paddingLeft="10px"
                android:textColor="@color/gray"
                android:id="@+id/login_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_65y"
                android:background="@drawable/wihte_bg"
                android:drawableLeft="@drawable/user_login_bg"
                android:ems="10"/>

        </LinearLayout>

        <LinearLayout
           android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75y" >

            <EditText
                android:textSize="@dimen/text_size_35" 
                android:singleLine="true"
                android:paddingLeft="10px"
                android:textColor="@color/gray"
                android:id="@+id/login_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_65y"
                android:background="@drawable/wihte_bg"
                android:drawableLeft="@drawable/pwd_bg"
                android:ems="10"
                android:inputType="textPassword"
                
                >

                <requestFocus />
            </EditText>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_57y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:textSize="@dimen/text_size_35"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dimen_70x"
            android:background="@drawable/buttom_selector_bg"
            android:id="@+id/system_login_btn"
            android:layout_width="@dimen/dimen_170x"
            android:layout_height="@dimen/dimen_70y"
            android:clickable="true"
            android:text="登录" />

        <Button
            android:textSize="@dimen/text_size_35"
            android:textColor="@color/white"
            android:background="@drawable/buttom_selector_bg"
            android:id="@+id/system_login_cancel"
            android:layout_width="@dimen/dimen_170x"
            android:layout_height="@dimen/dimen_70y"
            android:clickable="true"
            android:text="取消" />

    </LinearLayout>

</LinearLayout>
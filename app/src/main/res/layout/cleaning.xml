<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="#f6f6f6"
    android:orientation="vertical"
   
     >

    <LinearLayout
        android:gravity="center"
        android:background="@color/blue_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_123y" >

        <ImageView
            android:layout_marginRight="@dimen/dimen_15x"
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_49x"
            android:layout_height="@dimen/dimen_50y"
            android:src="@drawable/momey_img" />

        <TextView
           android:textSize="@dimen/text_size_40"
           android:textColor="@color/white"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清机加钞操作" />

        <ImageView
            android:layout_marginLeft="@dimen/dimen_80x"
            android:id="@+id/cleaning_back"
            android:layout_width="@dimen/dimen_64x"
            android:layout_height="@dimen/dimen_65y"
            android:src="@drawable/back_cirle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20y"
        android:layout_marginTop="@dimen/dimen_15y"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10px" >

        <ImageView
            android:id="@+id/clear_fail"
            android:layout_width="@dimen/dimen_50x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginRight="@dimen/dimen_20x"
            android:src="@drawable/fail_img"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/clear_sccuss"
            android:layout_width="@dimen/dimen_50x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginRight="@dimen/dimen_20x"
            android:src="@drawable/sccuss"
            android:visibility="visible" />

        <TextView
            android:id="@+id/clear_msg"
            android:textSize="@dimen/text_size_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_85y"
            android:layout_weight="0.71"
            android:singleLine="false"
            android:text="正在进行清机加钞操作..."
            android:textColor="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_15y"
        android:layout_marginBottom="@dimen/dimen_20y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/listview_clearing"
            android:textSize="@dimen/text_size_35"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_141y" >

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_marginRight="@dimen/dimen_20x"
            android:id="@+id/clearing_sure"
            android:textSize="@dimen/text_size_25"
            android:layout_width="@dimen/dimen_180x"
            android:layout_height="@dimen/dimen_60y"
            android:background="@drawable/buttom_selector_bg"
            android:text="确定"
            android:textColor="@color/white"
            android:visibility="visible" />

        <Button
            android:visibility="invisible"
            android:background="@drawable/buttom_selector_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_25"
            android:id="@+id/clear_btn"
            android:layout_width="@dimen/dimen_180x"
            android:layout_height="@dimen/dimen_60y"
            android:text="重新加钞" />

    </LinearLayout>

</LinearLayout>
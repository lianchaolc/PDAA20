<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50y" >

        <fragment
            android:id="@+id/fragment1"
            android:name="com.ljsw.tjbankpda.db.fragment.TopFragment_db"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="上缴入库线路"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/shangjiao_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_4y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/shangjiao_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100y" >

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线路编号"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_35"
                tools:ignore="all"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="fill_parent"
            android:background="@drawable/view_hr_backgroud" />

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线路名称"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_35"
                tools:ignore="all"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="fill_parent"
            android:background="@drawable/view_hr_backgroud" />

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周转箱数量"
                android:textColor="@color/red"
                android:gravity="center"
                android:textSize="@dimen/text_size_35"
                tools:ignore="all"/>
        </LinearLayout>
    </LinearLayout>
    <View 
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_1y"
            android:background="@drawable/view_hr_backgroud"/>



            <ListView
                android:id="@+id/shangjiao_listView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>


</LinearLayout>
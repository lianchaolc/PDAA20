<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/money_item_id"
        android:background="@color/transparency"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50y" >

        <TextView
            android:background="@color/transparency"
            android:gravity="center_vertical"
            android:id="@+id/TextView01"
            android:textSize="@dimen/text_size_20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="捆冠字号包编号:"
            android:textColor="@color/back" />

        <TextView
            android:background="@color/transparency"
            android:id="@+id/money_num_text"
            android:textSize="@dimen/text_size_22"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/TextView01"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/back" />

       

    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lclear_item"
        android:gravity="right"
        android:background="@color/back_2b"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50y" >

        <TextView
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_20x"
            android:id="@+id/clear_del_item"
            android:layout_width="@dimen/dimen_120x"
            android:layout_height="match_parent"
            android:text="删除" />

        <TextView
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/clear_cancel_item"
            android:layout_width="@dimen/dimen_120x"
            android:layout_height="match_parent"
            android:text="取消" />

    </LinearLayout>

</LinearLayout>
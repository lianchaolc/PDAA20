<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1f1f1"
    android:orientation="vertical" >
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20x"
            android:text="资料管理"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_50" />

        <Button
            android:id="@+id/ql_ruku_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_4y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>
     <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_8y"
    android:layout_height="@dimen/dimen_60y"
    android:textColor="@color/back"
    android:gravity="center"
    android:textSize="@dimen/text_size_30"
    android:text="操作人员:李四"></TextView>
        
    <View
   
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/aalaydizhiyapin"
            android:layout_width="@dimen/dimen_100x"
            android:layout_height="@dimen/dimen_250y"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:layout_marginRight="@dimen/dimen_8x"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/dimen_100x"
                android:layout_height="@dimen/dimen_80y"
                android:layout_weight="1"
                android:background="@drawable/ziliaomanger" />

            <TextView
                android:id="@+id/dizhiyapinmannager"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_46y"
                android:layout_marginTop="@dimen/dimen_38y"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="抵制押品资料管理"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aalayzhanghu"
            android:layout_width="@dimen/dimen_100x"
            android:layout_height="@dimen/dimen_250y"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/dimen_100x"
                android:layout_height="@dimen/dimen_80y"
                android:layout_weight="1"
                android:background="@drawable/ziliaomange2" />

            <TextView
                android:id="@+id/zhanghuziliaomannager"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_46y"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="账号资料管理"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>
    </LinearLayout>
     
</LinearLayout>
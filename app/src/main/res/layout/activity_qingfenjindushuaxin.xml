<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50y" >

        <fragment
            android:id="@+id/fragment1"
            android:name="com.ljsw.tjbankpda.qf.fragment.LoginUserInfoFragment"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_35x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="清分进度"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/qf_jindu_shuaxin_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_150x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0y"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50y"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textview222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未清分配送单："
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_35" />

                <TextView
                    android:id="@+id/qf_jindu_shuaxin_weiqing_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_35" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_1y"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginRight="@dimen/dimen_20x"
                android:background="@drawable/buttom_selector_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50y" >

                <LinearLayout
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送单号"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_35" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/textview222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所属网点"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_35" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_1y"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginRight="@dimen/dimen_20x"
                android:background="@drawable/buttom_selector_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <ListView
                    android:id="@+id/qf_jindu_shuaxin_weiqing_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </ListView>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_1y"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginRight="@dimen/dimen_20x"
                android:background="@drawable/buttom_selector_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50y"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textview222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已清分配送单："
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_35" />

                <TextView
                    android:id="@+id/qf_jindu_shuaxin_yiqing_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_35" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50y" >

                <LinearLayout
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送单号"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_35" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/textview222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所属网点"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_35" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_1y"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginRight="@dimen/dimen_20x"
                android:background="@drawable/buttom_selector_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ListView
                    android:id="@+id/qf_jindu_shuaxin_yiqing_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_80y"
        android:gravity="center" >

        <Button
            android:id="@+id/qf_jindu_shuaxin_chuku"
            android:layout_width="@dimen/dimen_200x"
            android:layout_height="@dimen/dimen_60y"
            android:background="@drawable/buttom_selector_bg"
            android:text="周转箱扫描"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

</LinearLayout>
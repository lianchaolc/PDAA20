<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lboxdodetail_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/brand"
            android:textSize="@dimen/text_size_25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:gravity="center"
            android:text="品牌信息"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/box_num"
            android:textSize="@dimen/text_size_25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:gravity="center"
            android:text="钞箱编号"
            android:textColor="@color/gray" />

        <TextView
            android:visibility="gone"
            android:id="@+id/atm_type"
            android:textSize="@dimen/text_size_25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:gravity="center"
            android:text="ATM类型"
            android:textColor="@color/gray" /> 
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newstop_item_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50y"
        android:background="@color/back_2b"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/newstop_item_del"
            android:textSize="@dimen/text_size_25"
            android:layout_width="@dimen/dimen_150x"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/newstop_item_cancel"
            android:textSize="@dimen/text_size_25"
            android:layout_width="@dimen/dimen_150x"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.example.pda.homemagnetopackge.AccountinformationSelectMainActivity" >
    <!-- 2020-05-22-查看1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="账户资料线路选择"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/accountma_nselect_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginTop="@dimen/dimen_5y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/zhql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y"
            android:gravity="center" >

            <TextView
                android:id="@+id/plan_num_fra"
                android:textSize="@dimen/text_size_30"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_weight="2.1"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:gravity="center"
                android:text="路线名称"
                android:textColor="@color/back" />

            <TextView
                android:id="@+id/plan_content_fra"
                android:textSize="@dimen/text_size_30"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:layout_weight="1"
                android:gravity="center"
                android:text="数量"
                android:textColor="@color/back" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/head_notclear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/way_notdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/boxdetail_notdata"
                    android:textSize="@dimen/text_size_25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="暂时没有任务"
                    android:textColor="@color/back" />
            </LinearLayout>

           
        </RelativeLayout>
    </LinearLayout>
     <ListView
        android:id="@+id/zhanghulistview_way"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_525y"
        android:layout_marginBottom="@dimen/dimen_10y"
        android:scrollbars="none" >
    </ListView>

    <Button
        android:id="@+id/btn_accountinfor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:layout_marginLeft="@dimen/dimen_10x"
        android:layout_marginRight="@dimen/dimen_10x"
        android:layout_marginBottom="@dimen/dimen_10y"
        android:background="@drawable/buttom_selector_bg"
        android:text="周转箱扫描"
        android:textSize="@dimen/text_size_30"
        android:textColor="@color/back" >
    </Button>

</LinearLayout>
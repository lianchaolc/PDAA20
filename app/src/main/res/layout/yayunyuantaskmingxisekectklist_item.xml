<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_10y"
    android:background="#ffffff"
    android:orientation="vertical" >
    <!-- 2020-05-22-查看1 -->
    <LinearLayout
        android:id="@+id/lintitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:layout_gravity="center"
        android:background="@color/bule_main"
        android:divider="@null"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/yayunyuantasktext"
            android:textSize="@dimen/text_size_30"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btnyayunyuantask"
            android:textSize="@dimen/text_size_30"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="#EFEEEE" >
    </View>

    <LinearLayout
        android:id="@+id/liniitenyayun"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:layout_gravity="center"
        android:divider="@null"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/yayunorgname"
            android:textSize="@dimen/text_size_30"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="physon"
            android:textColor="@color/back" />

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="match_parent"
            android:background="#EFEEEE" >
        </View>

        <TextView
            android:id="@+id/yayuntooktast"
            android:textSize="@dimen/text_size_26"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:layout_marginBottom="@dimen/dimen_5y"
            android:layout_marginLeft="@dimen/dimen_5x"
            android:layout_marginRight="@dimen/dimen_5x"
            android:layout_marginTop="@dimen/dimen_5y"
            android:textColor="@color/back" />

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="match_parent"
            android:background="#EFEEEE" >
        </View>

        <TextView
            android:id="@+id/yayunupdatatast"
            android:textSize="@dimen/text_size_26"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dimen_5y"
            android:layout_marginLeft="@dimen/dimen_5x"
            android:layout_marginRight="@dimen/dimen_5x"
            android:layout_marginTop="@dimen/dimen_5y"
            android:text="-"
            android:textColor="@color/back"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="#EFEEEE" >
    </View>

</LinearLayout>
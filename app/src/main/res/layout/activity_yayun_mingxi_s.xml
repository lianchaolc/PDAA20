<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50y" >
        <fragment
            android:id="@+id/fragment1"
            android:name="com.ljsw.tjbankpda.yy.fragment.LoginYayunUserInfoFragment"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/u20"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75y"
            android:background="@color/blue_title"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:src="@drawable/u24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60y"
                android:text="押运任务明细"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_40" />
            <ImageView
                android:id="@+id/yayun_backS2"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_80x"
                android:src="@drawable/back_change" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75y"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60y"
                android:gravity="center"
                android:textColor="#DC143C"
                android:textSize="@dimen/text_size_35"
                android:layout_marginLeft="20sp"
                android:text="机构名称:"
                tools:ignore="all"/>

            <TextView
                android:id="@+id/yy_wdName"
               	android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60y"
                android:gravity="center"
                android:textSize="@dimen/text_size_35"
                android:textColor="@color/back"
                android:text="西青网点一" />

        </LinearLayout>
        
        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_1y"
            android:background="@drawable/u25"
            tools:ignore="all"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_5y"
            android:layout_marginBottom="@dimen/dimen_5y"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60y"
                android:gravity="center"
                android:textColor="#DC143C"
                android:textSize="@dimen/text_size_35"
                android:layout_marginLeft="20sp"
                android:text="所属线路:"
                tools:ignore="all"/>

            <TextView
                android:id="@+id/yy_xlName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/back"
                android:text="北城支行中心库一线" />

        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_1y"
            android:background="@drawable/u25"
            tools:ignore="all"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75y"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60y"
                android:gravity="center"
                android:textColor="#DC143C"
                android:textSize="@dimen/text_size_35"
                android:layout_marginLeft="-10sp"
                android:text="上缴周转箱数量:"
                tools:ignore="all"/>

            <TextView
                android:id="@+id/yy_sjNum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60y"
                android:gravity="center"
                android:textSize="@dimen/text_size_40"
                android:textColor="@color/back"
                android:text="10" />

        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_1y"
            android:background="@drawable/u25"
            tools:ignore="all"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75y"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60y"
                android:gravity="center"
                android:textColor="#DC143C"
                android:layout_marginLeft="-10sp"
                android:textSize="@dimen/text_size_35"
                android:text="请领周转箱数量:"
                tools:ignore="all"/>

            <TextView
                android:id="@+id/yy_qlNum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60y"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_40" />

        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_1y"
            android:background="@drawable/u25"
            tools:ignore="all"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75y"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView4"
               android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60y"
                android:gravity="center"
                android:textColor="#DC143C"
                android:textSize="@dimen/text_size_35"
                android:layout_marginLeft="20sp"
                android:text="运送日期:"
                tools:ignore="all"/>

            <TextView
                android:id="@+id/yy_xlDate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60y"
                android:gravity="center"
                android:textSize="@dimen/text_size_40"
                android:textColor="@color/back"
                android:text="2015-6-10" />

        </LinearLayout>

        <TextView
            android:id="@+id/yy_saomiao"
            android:layout_width="@dimen/dimen_200x"
            android:layout_height="@dimen/dimen_75y"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_30y"
            android:background="@drawable/buttom_selector_bg"
            android:textSize="@dimen/text_size_35"
            android:textColor="#FFFFFF"
            android:text="周转箱扫描" />        
    </LinearLayout>

</LinearLayout>
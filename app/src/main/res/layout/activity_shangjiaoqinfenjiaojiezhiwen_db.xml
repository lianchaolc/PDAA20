<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/gray"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50x"
            android:text="上缴清分周转交接"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/qingfenjiaojie_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_38x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_text_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20x"
            android:text="请按手指 : "
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40" />
        <TextView
            android:id="@+id/qingfenshangjiao_top_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginLeft="@dimen/dimen_20x"
        android:layout_marginRight="@dimen/dimen_20x"
        android:background="@drawable/buttom_selector_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清分管理员"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清分管理员"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_40" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginLeft="@dimen/dimen_20x"
        android:layout_marginRight="@dimen/dimen_20x"
        android:background="@drawable/buttom_selector_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_300y"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/qingfenshangjiao_img_left"
                android:layout_width="@dimen/dimen_200x"
                android:layout_height="@dimen/dimen_220y"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/qingfenshangjiao_img_right"
                android:layout_width="@dimen/dimen_200x"
                android:layout_height="@dimen/dimen_220y"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/qingfenjiaojie_setname_left"
                android:layout_width="@dimen/dimen_200x"
                android:layout_height="@dimen/dimen_60y"
                android:background="@color/blue_text_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_45" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/qingfenjiaojie_setname_right"
                android:layout_width="@dimen/dimen_200x"
                android:layout_height="@dimen/dimen_60y"
                android:background="@color/blue_text_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_45" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginLeft="@dimen/dimen_20x"
        android:layout_marginRight="@dimen/dimen_20x"
        android:background="@drawable/buttom_selector_bg" />

    <LinearLayout
        android:id="@+id/qingfenjiaojie_yanshi"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/gray_msg_bg"
        android:layout_height="@dimen/dimen_122y" >

        <TextView
            android:id="@+id/qingfenshangjiao_bottom_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_40"
            android:textColor="@color/back"
            android:text="请第一位清分管理员按手指" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50y" >

        <fragment
            android:id="@+id/fragment1"
            android:name="com.ljsw.tjbankpda.db.fragment.TopFragment_db"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="请领配送出库扫描"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/peisong_saomiao_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50y" >

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未扫描："
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_35"
                tools:ignore="all"/>

            <TextView
                android:id="@+id/peisong_saomiao_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_35" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/textview222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已扫描："
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_35" />

            <TextView
                android:id="@+id/peisong_saomiao_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_35" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginLeft="@dimen/dimen_20x"
        android:layout_marginRight="@dimen/dimen_20x"
        android:background="@drawable/buttom_selector_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70y" >

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView2"
                tools:ignore="all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未扫描周转箱"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_35" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已扫描周转箱"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_35"
                tools:ignore="all"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_340y"
        android:orientation="horizontal" >
        
        <ListView
            android:id="@+id/peisong_saomiao_list_left"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </ListView>

        <ListView
            android:id="@+id/peisong_saomiao_list_right"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </ListView> 
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50y"
        android:gravity="center" >

        <TextView
            android:id="@+id/peisong_tishi_cuowu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/peisong_saomiao_chuku"
                android:layout_width="@dimen/dimen_180x"
                android:layout_height="@dimen/dimen_60y"
                android:background="@drawable/buttom_selector_bg"
                android:text="出库交接"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/peisong_saomiao_quxiao"
                android:layout_width="@dimen/dimen_180x"
                android:layout_height="@dimen/dimen_60y"
                android:background="@drawable/buttom_selector_bg"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_40" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
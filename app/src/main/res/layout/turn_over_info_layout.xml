<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_boder"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/turnovercheckinfotvtitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="我是头部："
            android:textColor="@color/blue_top"
            android:textSize="@dimen/text_size_26" />

        <TextView
            android:id="@+id/turnovercheckinfotvtitleinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="我是内容"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/turnovercheckinfotvtitlenumid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我是头部："
            android:textColor="@color/blue_top"
            android:textSize="@dimen/text_size_26" />

        <TextView
            android:id="@+id/turnovercheckinfotvtitleinfonumid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="我是内容"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/turnovercheckinfotvtitleordertype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我是头部："
            android:textColor="@color/blue_top"
            android:textSize="@dimen/text_size_26" />

        <TextView
            android:id="@+id/turnovercheckinfotvtitleinfoordertype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="我是内容"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/turnovercheckinfotvtitleorderpsnum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我是头部："
            android:textColor="@color/blue_top"
            android:textSize="@dimen/text_size_26" />

        <TextView
            android:id="@+id/turnovercheckinfotvtitleinfoordersnum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="我是内容"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_10x"
        android:background="@color/back" />
</LinearLayout>

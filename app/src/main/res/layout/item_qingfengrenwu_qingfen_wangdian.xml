<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_item_qingfenrenwu_qingling_wangdain_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:background="@color/bule_main" >

        <CheckBox
            android:id="@+id/cb_item_qingfenrenwu_qingling_wangdain_allcheck"
            android:layout_width="@dimen/dimen_150x"
            android:layout_height="@dimen/dimen_85y"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dimen_25x"
            android:textSize="@dimen/text_size_30"
            android:text=" 全选"/>

        <TextView
            android:id="@+id/tv_item_qingfenrenwu_qingling_wangdain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cb_item_qingfenrenwu_qingling_wangdain_allcheck"
            android:text="西青支行网点一"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_35" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_item_qingfenrenwu_qingling_wangdain_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/white"
        android:visibility="gone"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_60x"
            android:gravity="center"
            android:text="订单号"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_35" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_1y"
            android:background="@drawable/gradient_white_gray" />

        <ListView
            android:id="@+id/lv_item_qingfenrenwu_qingling_wangdain_orderNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:divider="@color/white"
            android:layout_marginRight="@dimen/dimen_15x" >
        </ListView>

        <TextView
            android:id="@+id/tv_item_qingfenrenwu_qingling_wangdain_orderCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/dimen_11y"
            android:layout_marginRight="@dimen/dimen_22x"
            android:textColor="@color/back"
            android:text="已选：0个订单"
            android:textSize="@dimen/text_size_35" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_1y"
            android:background="@drawable/gradient_white_gray" />

        <Button
            android:id="@+id/btn_item_qingfenrenwu_qingling_wangdain_queding"
            android:layout_width="@dimen/dimen_300x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_8y"
            android:layout_marginTop="@dimen/dimen_8y"
            android:textSize="@dimen/text_size_35"
            android:background="@drawable/buttom_selector_bg"
            android:text="确定" />

    </LinearLayout>

</LinearLayout>
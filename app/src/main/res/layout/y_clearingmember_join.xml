<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:orientation="vertical"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:background="@color/blue_title"
        android:orientation="horizontal" >

        <LinearLayout
            android:paddingLeft="25px"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_40x"
                android:layout_height="@dimen/dimen_40y"
                android:src="@drawable/users" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_280x"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                 android:textSize="@dimen/text_size_40"
                android:textColor="@color/white"
                android:id="@+id/clear_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清分员交接" 
                android:layout_marginTop="@dimen/dimen_48y" />

        </LinearLayout>
        
         <LinearLayout
            android:layout_width="@dimen/dimen_100x"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center" >

             <ImageView
                 android:id="@+id/back_clear"
                 android:layout_width="@dimen/dimen_70x"
                 android:layout_height="@dimen/dimen_70y"
                 android:src="@drawable/back_cirle" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_500y"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40y" >

            <LinearLayout
                android:layout_width="@dimen/dimen_180x"
                android:layout_height="@dimen/dimen_80y"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/blue_title">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请按入手指"
                    android:textSize="@dimen/text_size_35"
               		android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_300x"
                android:layout_height="@dimen/dimen_80y"
                android:background="@color/blue_top"
                android:orientation="vertical" >
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_310y"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/dimen_240x"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50y"
                    android:orientation="vertical" 
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清分员"
                        android:textSize="@dimen/text_size_30" 
                        android:textColor="@color/back"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_190y"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70y"
                    android:orientation="vertical" >

                    <Button
                        
                        android:id="@+id/button1"
                        android:layout_width="@dimen/dimen_200x"
                        android:layout_height="match_parent"
                        android:text="姓名:张三"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_30"
                        android:background="@drawable/buttom_selector_bg"
                        android:gravity="center"
                        android:layout_gravity="center" />

                </LinearLayout>

            </LinearLayout>

           <LinearLayout
                android:layout_width="@dimen/dimen_240x"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50y"
                    android:orientation="vertical" 
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清分员"
                        android:textSize="@dimen/text_size_30" 
                        android:textColor="@color/back" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_190y"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70y"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="@dimen/dimen_200x"
                        android:layout_height="match_parent"
                        android:text="姓名:张三"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_30"
                        android:background="@drawable/buttom_selector_bg"
                        android:gravity="center"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_msg_bg"
        android:orientation="horizontal"
        android:gravity="center" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/gray"
                android:text="认证成功" />

      
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/dimen_56x"
                android:layout_height="@dimen/dimen_56y"
                android:src="@drawable/sccuss"
                android:layout_marginLeft="@dimen/dimen_10x" />
        </LinearLayout>

   

</LinearLayout>
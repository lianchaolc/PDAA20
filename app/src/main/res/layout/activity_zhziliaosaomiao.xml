<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEE"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="账户资料扫描"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_50" />

        <Button
            android:id="@+id/ql_ruku_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_4y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_80y"
         android:gravity="center_vertical"
        android:orientation="horizontal" >

       
        <TextView
            android:id="@+id/dzyp_"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center"
            android:layout_weight="1"
            android:text="操作人员"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24"
            tools:ignore="all"/>

        <TextView
            android:id="@+id/dzyp_username"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center|left"
            android:layout_weight="1"
            android:text="张三"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24"
            tools:ignore="all">
        </TextView>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" />
     <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_80y"
         android:gravity="center_vertical"
        android:orientation="horizontal" >

       
        <TextView
            android:id="@+id/dzyp_"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center"
            android:layout_weight="1"
            android:text="入库任务编号"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24"
            tools:ignore="all"/>

        <TextView
            android:id="@+id/dzyp_username"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center|left"
            android:layout_weight="1"
            android:text="RK20180607002"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24"
            tools:ignore="all">
        </TextView>
    </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" />
     <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_80y"
         android:gravity="center"
         android:orientation="horizontal" >

         <LinearLayout
          android:layout_width="@dimen/dimen_0x"
         android:layout_height="@dimen/dimen_80y"
         android:layout_weight="1"
         android:layout_gravity="center"
         android:orientation="horizontal" >
        <TextView
            android:id="@+id/dzyp_"
            android:layout_width="@dimen/dimen_0x"
          android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="入库任务编号"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24"
            tools:ignore="all"/>

        <TextView
            android:id="@+id/dzyp_username"
            android:layout_width="@dimen/dimen_0x"
           android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_weight="1"
            android:text="RK20180607002"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24"
            tools:ignore="all">
        </TextView>
        </LinearLayout>
         <LinearLayout
          android:layout_width="@dimen/dimen_0x"
         android:layout_height="@dimen/dimen_80y"
         android:layout_weight="1"
         android:layout_gravity="center"
         android:orientation="horizontal" >
        <TextView
            android:id="@+id/dzyp_"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center"
            android:layout_weight="1"
            android:text="待库任务编号"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24"
            tools:ignore="all"/>

        <TextView
            android:id="@+id/dzyp_username"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center|left"
            android:layout_weight="1"
            android:text="RK20180607002"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24"
            tools:ignore="all">
        </TextView>
        </LinearLayout>
    </LinearLayout>
       <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" />
     <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_80y"
         android:gravity="center_vertical"
        android:orientation="horizontal" >
         <Button
            android:id="@+id/saomiao_btn"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_margin="5px"
            android:layout_weight="0.5"
              android:textSize="@dimen/text_size_24"
            android:background="@drawable/buttom_selector_bg"
            android:text="开始扫描"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/qingkong_btn"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_margin="5px"
            android:layout_weight="0.5"
              android:textSize="@dimen/text_size_24"
            android:background="@drawable/buttom_selector_bg"
            android:text="清空"
            android:textColor="@color/white" />

    </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" />
      <LinearLayout
          android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_80y"
         android:layout_weight="1"
         android:layout_gravity="center"
         android:orientation="horizontal" >
        <TextView
            android:id="@+id/dzyp_"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="存放位置"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24"
            tools:ignore="all"
            />

        <TextView
            android:id="@+id/saomiaocunfagnweizhi"
            android:layout_width="@dimen/dimen_0x"
         android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24" >
        </TextView>
        </LinearLayout>
        
      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" /> 
       <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_80y"
         android:gravity="center_vertical"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/saomiaoresult_btn"
            android:layout_width="@dimen/dimen_0x"
           android:layout_height="match_parent"
            android:layout_margin="5px"
            android:layout_weight="0.5"
            android:textSize="@dimen/text_size_24"
            android:background="@drawable/buttom_selector_bg"
            android:text="存放位置"
            android:textColor="@color/white" />
</LinearLayout></LinearLayout>
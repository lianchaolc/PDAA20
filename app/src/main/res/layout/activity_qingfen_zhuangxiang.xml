<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_qingfen_zhuangxiang"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:background="#00aeFF"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/fg_qingfen_zhuangxiang_loginUserInfo"
            android:name="com.ljsw.tjbankpda.qf.fragment.LoginUserInfoFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/bule_main" >

        <TextView
            android:id="@+id/tv_zx_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_zx_imageView1"
            android:text="请领装箱"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40" />

        <ImageView
            android:id="@+id/iv_zx_imageView1"
            android:layout_width="@dimen/dimen_50x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_11x"
            android:src="@drawable/user_order" />

        <ImageView
            android:id="@+id/iv_qingfen_zhuangxiang_back"
            android:layout_width="@dimen/dimen_64x"
            android:layout_height="@dimen/dimen_64y"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10x"
            android:src="@drawable/back_change" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_510y"
        android:layout_marginBottom="@dimen/dimen_4y"
        android:layout_marginLeft="@dimen/dimen_3x"
        android:layout_marginRight="@dimen/dimen_3x"
        android:layout_marginTop="@dimen/dimen_4y"
        android:background="@drawable/money_count"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginRight="@dimen/dimen_1x"
            android:layout_marginTop="@dimen/dimen_1y" >

            <Button
                android:id="@+id/btn_qingfen_zhuangxiang_xianjin"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="现金"
                android:textSize="@dimen/text_size_35" />

            <View
                android:layout_width="@dimen/dimen_1x"
                android:layout_height="@dimen/dimen_60y"
                android:background="#000000" />

            <Button
                android:id="@+id/btn_qingfen_zhuangxiang_zhongkong"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_weight="1"
                android:background="@drawable/btn_bottom_gray"
                android:text="重空凭证"
                android:textSize="@dimen/text_size_35" />

            <View
                android:layout_width="@dimen/dimen_1x"
                android:layout_height="@dimen/dimen_60y"
                android:background="#000000" />

            <Button
                android:id="@+id/btn_qingfen_zhuangxiang_dizhi"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_weight="1"
                android:background="@drawable/btn_bottom_gray"
                android:text="抵制押品"
                android:textSize="@dimen/text_size_35" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_qingfen_zhuangxiang_context"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp" >
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y" >

        <Button
            android:id="@+id/btn_qingfen_zhuangxiang_tongji"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginRight="@dimen/dimen_5x"
            android:layout_marginTop="@dimen/dimen_5y"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:text="装箱统计"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_35" />

        <Button
            android:id="@+id/btn_qingfen_zhuangxiang_zhouzhuanxiangluru"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_5x"
            android:layout_marginRight="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_5y"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:text="周转箱录入"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

</LinearLayout>
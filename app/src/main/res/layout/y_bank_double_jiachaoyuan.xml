<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bank_parent"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:background="@color/blue_title"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/dimen_80x"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_40x"
                android:layout_height="@dimen/dimen_40y"
                android:src="@drawable/users" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_280x"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/login_title"
                android:textSize="@dimen/text_size_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_40y"
                android:text="加钞员交接"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_100x"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/back_bank"
                android:layout_width="@dimen/dimen_70x"
                android:layout_height="@dimen/dimen_70y"
                android:layout_marginRight="@dimen/dimen_10x"
                android:src="@drawable/back_cirle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_450y"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40y" >

            <LinearLayout
                android:layout_width="@dimen/dimen_180x"
                android:layout_height="@dimen/dimen_80y"
                android:background="@color/blue_title"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:textSize="@dimen/text_size_35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请按入手指"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_300x"
                android:layout_height="@dimen/dimen_80y"
                android:background="@color/blue_top"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/resultmsg"
                    android:textSize="@dimen/text_size_30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_350y"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/dimen_240x"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50y"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/username1"
                        android:textSize="@dimen/text_size_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加钞员"
                        android:textColor="@color/back" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_190y"
                    android:layout_marginBottom="@dimen/dimen_10y"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/finger_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70y"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="@dimen/dimen_200x"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/blue_text_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_30" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_240x"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50y"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/username2"
                        android:textSize="@dimen/text_size_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加钞员"
                        android:textColor="@color/back" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_190y"
                    android:layout_marginBottom="@dimen/dimen_10y"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/finger_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70y"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="@dimen/dimen_200x"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/blue_text_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_30" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/show"
            android:textSize="@dimen/text_size_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70y"
            android:gravity="center"
            android:text="请第一位加钞员按压手指..."
            android:textColor="@color/back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_msg_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/resulttext"
                android:textSize="@dimen/text_size_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证通过"
                android:textColor="@color/gray"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/resultimg"
                android:layout_width="@dimen/dimen_56x"
                android:layout_height="@dimen/dimen_56y"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:src="@drawable/sccuss"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
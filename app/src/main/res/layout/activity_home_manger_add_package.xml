<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
       android:background="#EFEEEE"
    tools:context=".HomeMangerAddPackageActivity" >

  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="库管员装袋"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/ql_ruku_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_5y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>
    
    
     <TextView
        android:id="@+id/tv_zhengtopackger"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_marginLeft="@dimen/dimen_10x"
        android:layout_marginRight="@dimen/dimen_10x"
        android:layout_marginTop="@dimen/dimen_60y"
        android:background="@color/bule_main"
        android:gravity="center"
        android:text="库管员整钞装袋"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_30" />

    <TextView
        android:id="@+id/tv_zoretopackger"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_marginLeft="@dimen/dimen_10x"
        android:layout_marginRight="@dimen/dimen_10x"
        android:layout_marginTop="@dimen/dimen_40y"
        android:background="@color/bule_main"
        android:gravity="center"
        android:text="库管员尾零装袋"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_30" />
    
    
    </LinearLayout>

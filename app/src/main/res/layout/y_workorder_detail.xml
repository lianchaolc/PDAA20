<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:orientation="vertical"
    android:background="#ffffff" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_top"
        android:orientation="vertical" >
    </LinearLayout>

    <fragment
        android:id="@+id/f3"
        android:name="com.fragment.pda.HeadUser_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50y" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100y"
        android:background="@color/blue_title"
        android:orientation="horizontal" 
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" 
            android:layout_weight="4">

           <LinearLayout
                android:layout_width="@dimen/dimen_72x"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|right" >

                <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_40x"
                android:layout_height="@dimen/dimen_40y"
                android:src="@drawable/user_order" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" 
                android:gravity="center_vertical">
                
                <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_40"
                android:textColor="@color/white"
                android:text="派工单明细" 
                android:layout_marginLeft="@dimen/dimen_10x"/>
            </LinearLayout>
             
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1" >

            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/orderinfo_backs"
                android:layout_width="@dimen/dimen_70x"
                android:layout_height="@dimen/dimen_70y"
                android:src="@drawable/back_cirle" 
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15px"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_470y"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70y"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:text="加钞计划编号:"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/webinfo_plan"
                android:textSize="@dimen/text_size_22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="JN292320304230"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80y"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:text="加钞路线:"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/webinfo_way"
                android:textSize="@dimen/text_size_22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="东丽支行中心库二线"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:text="计划类型:"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/webinfo_type"
                android:textSize="@dimen/text_size_22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="在行式"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:text="ATM数量:"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/webinfo_atm"
                android:textSize="@dimen/text_size_22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="0"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView03"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:text="钞箱数量:"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/webinfo_boxnum"
                android:textSize="@dimen/text_size_22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="0"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:text="车牌号码:"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/webinfo_carbrand"
                android:textSize="@dimen/text_size_22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="A516"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:text="加钞日期:"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/webinfo_date"
                android:textSize="@dimen/text_size_22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="2014-5-5"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:orientation="vertical"
        android:gravity="center" >

        <Button
            android:textColor="@color/white"
            android:id="@+id/atminfo"
            android:layout_width="@dimen/dimen_380x"
            android:layout_height="@dimen/dimen_60y"
            android:text="ATM明细信息" 
            android:textSize="@dimen/text_size_30"
            android:background="@drawable/buttom_selector_bg"/>

    </LinearLayout>

</LinearLayout>
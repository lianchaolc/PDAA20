<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEE"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="读取箱子修改信息"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_50"
            tools:ignore="all"/>

        <Button
            android:id="@+id/ql_ruku_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_4y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dimen_8y"
              android:gravity="center"
              android:orientation="vertical" >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:gravity="center"
                  android:orientation="horizontal" >

                  <TextView
                      android:layout_width="@dimen/dimen_0x"
                      android:layout_height="@dimen/dimen_45y"
                      android:layout_margin="5px"
                      android:layout_marginLeft="@dimen/dimen_40x"
                      android:layout_marginRight="@dimen/dimen_25x"
                      android:layout_marginTop="@dimen/dimen_8y"
                      android:layout_weight="0.75"
                      android:gravity="center"
                      android:text="扫描结果:"
                      android:textColor="@color/back"
                      android:textSize="@dimen/text_size_30" >
                  </TextView>

                  <TextView
                      android:id="@+id/rb_tvsaomiaoresult"
                      android:layout_width="@dimen/dimen_0x"
                      android:layout_height="@dimen/dimen_45y"
                      android:layout_margin="5px"
                      android:layout_marginLeft="@dimen/dimen_8x"
                      android:layout_marginRight="@dimen/dimen_8x"
                      android:layout_marginTop="@dimen/dimen_8y"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:text=" "
                      android:textColor="@color/back"
                      android:textSize="@dimen/text_size_25" />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dimen_8y"
                  android:layout_weight="0.41"
                  android:background="@color/white"
                  android:gravity="center"
                  android:orientation="vertical" >

                  <TextView
                      android:id="@+id/textView1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dimen_24x"
                      android:layout_marginTop="@dimen/dimen_20y"
                      android:gravity="center|left"
                      android:text="请选择类型:"
                      android:textColor="@color/back"
                      android:textSize="@dimen/text_size_30"
                      tools:ignore="all"/>

                  <RadioGroup
                      android:id="@+id/rg_zzx_num"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="@dimen/dimen_140x"
                      android:layout_marginTop="@dimen/dimen_10y"
                      android:orientation="vertical" >

                      <RadioButton
                          android:id="@+id/rb_cash"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="现金"
                          android:textColor="@color/back"
                          android:textSize="@dimen/text_size_25" />

                      <RadioButton
                          android:id="@+id/rb_zhongyaozhongkong"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/dimen_10y"
                          android:text="重要空白凭证"
                          android:textColor="@color/back"
                          android:textSize="@dimen/text_size_25" />

                      <RadioButton
                          android:id="@+id/dizhiyapin"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/dimen_10y"
                          android:text="档案管理"
                          android:textColor="@color/back"
                          android:layout_marginBottom="@dimen/dimen_20y"
                          android:textSize="@dimen/text_size_25" />
                  </RadioGroup>
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dimen_8y"
                  android:background="@color/white"
                  android:gravity="center"
                  android:orientation="vertical" >

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/dimen_60y"
                      android:layout_marginBottom="@dimen/dimen_20y"
                      android:layout_marginLeft="@dimen/dimen_28x"
                      android:layout_marginRight="@dimen/dimen_8x"
                      android:layout_marginTop="@dimen/dimen_19y"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
                      android:gravity="center_vertical" >

                      <EditText
                          android:id="@+id/et_into"
                          android:layout_width="@dimen/dimen_280x"
                          android:layout_height="@dimen/dimen_60y"
                          android:layout_gravity="center"
                          android:layout_marginLeft="@dimen/dimen_8x"
                          android:background="@drawable/money_count"
                          android:hint="请输入"
                          android:paddingLeft="5px"
                          android:textSize="@dimen/text_size_30" >
                      </EditText>

                      <TextView
                          android:id="@+id/rbt_tv"
                          android:layout_width="@dimen/dimen_100x"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
               
                          android:text=""
                          android:textColor="@color/bule_main"
                          android:textSize="@dimen/text_size_30" />

                      <TextView
                          android:id="@+id/tv_clean"
                          android:layout_width="@dimen/dimen_100x"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="清除"
                          android:textColor="@color/bule_main"
                          android:textSize="@dimen/text_size_30"
                          android:visibility="gone" >
                      </TextView>
                  </LinearLayout>
              </LinearLayout>
          </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8x"
        android:layout_marginRight="@dimen/dimen_8x"
        android:layout_marginTop="@dimen/dimen_60y"
      android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_saomiao"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:text="扫描"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30" />

        <Button
            android:id="@+id/btn_tijiao"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30" />
    </LinearLayout>

</LinearLayout>

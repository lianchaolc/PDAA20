<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="后督账包线路选择"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/huo_du_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_5y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/houduactivityql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:gravity="center" >

        <TextView
            android:id="@+id/plan_num_fra"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_100x"
            android:layout_weight="2.1"
            android:gravity="center"
            android:text="路线名称"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:id="@+id/plan_content_fra"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="数量"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />
    </LinearLayout>

    <ListView
        android:id="@+id/houdulistview_way"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_525y"
        android:layout_marginBottom="@dimen/dimen_10y"
        android:scrollbars="none" >
    </ListView>

    <Button
        android:id="@+id/houduzhangbaobtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:layout_marginLeft="@dimen/dimen_20x"
        android:layout_marginRight="@dimen/dimen_20x"
        android:background="@drawable/buttom_selector_bg"
         android:text="周转箱扫描"
        android:textColor="@color/back"
        android:textSize="@dimen/text_size_30" >
    </Button>

</LinearLayout>
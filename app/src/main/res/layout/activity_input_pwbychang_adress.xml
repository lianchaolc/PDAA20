<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical"
    tools:context="com.main.pda.InputPWBychangAdressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_165y"
        android:layout_marginTop="@dimen/dimen_18y"
        android:background="@drawable/edit_bottom"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_70x"
            android:layout_height="@dimen/dimen_70y"
            android:layout_marginBottom="@dimen/dimen_25y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginRight="@dimen/dimen_70x"
            android:src="@drawable/loginimage" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_25y"
            android:layout_marginTop="@dimen/dimen_13y"
            android:text="修改地址登录"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_35" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/showerror"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_65y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:gravity="center"
            android:text="这里是错误提示"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_35" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10x"
        android:layout_marginRight="@dimen/dimen_10x"
        android:layout_marginTop="@dimen/dimen_175y"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_passwordchange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_65y"
            android:background="@drawable/wihte_bg"
            android:drawableLeft="@drawable/pwd_bg"
            android:ems="8"
            android:inputType="textPassword"
            android:paddingLeft="10px"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_35"></EditText>


    </LinearLayout>

    <Button
        android:id="@+id/loginaction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_65y"
        android:layout_marginLeft="@dimen/dimen_10x"
        android:layout_marginRight="@dimen/dimen_10x"
        android:layout_marginTop="@dimen/dimen_65y"
        android:background="@drawable/buttom_selector_bg"
        android:gravity="center"
        android:text="登录"
        android:textSize="@dimen/text_size_35" />
</LinearLayout>

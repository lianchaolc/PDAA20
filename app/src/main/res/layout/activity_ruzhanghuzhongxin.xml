<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEE"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="入账户中心"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/ql_ruku_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_35x"
            android:layout_marginTop="@dimen/dimen_4y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:layout_marginRight="@dimen/dimen_8x"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="操作人:"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/accountoravuser"
                android:layout_width="@dimen/dimen_0x"
                     android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="白小白"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:layout_marginRight="@dimen/dimen_8x"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_0x"
                    android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="操作人:"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/tvusername2"
                android:layout_width="@dimen/dimen_0x"
                      android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="李三样"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>
    </LinearLayout>

 
    
      <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1y"
            android:background="#EFEEEE" >
        </View>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dimen_10y"
          android:background="@color/white"
          android:orientation="vertical" >

 

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1y"
            android:background="#EFEEEE" >
        </View>
        
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_marginTop="@dimen/dimen_5y"
        android:layout_gravity="center"
        android:divider="@null"
        android:orientation="horizontal" >

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="match_parent"
            android:background="#EFEEEE" >
        </View>

        <TextView
            android:id="@+id/lv_dizhiyapinid"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="线路号"
            android:layout_marginRight="@dimen/dimen_10x"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_5y"
            android:background="#EFEEEE" >
        </View>

        <TextView
            android:id="@+id/dizhiyapinitem"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="2.0"
            android:gravity="center"
            android:text="线路名称"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="match_parent"
            android:background="#EFEEEE" >
        </View>

        <TextView
            android:id="@+id/dizhiyapintype"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="周转箱"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="match_parent"
            android:background="#EFEEEE" >
        </View>
    </LinearLayout>
 <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="#E6E5E5" />
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/ruzhanghuzhongxin_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:divider="#00000000"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_marginTop="@dimen/dimen_5y"
                android:layout_weight="1" >
            </ListView>

           
        </LinearLayout>

      </LinearLayout>
   

</LinearLayout>
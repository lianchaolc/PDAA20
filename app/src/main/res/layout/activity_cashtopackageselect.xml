<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".CashtopackageSelectActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="15px"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="现金装袋"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />
        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="130px"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvzhengchaotopackger"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:background="@color/bule_main"
        android:gravity="center"
        android:text="整钞装袋"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvweilingtopackger"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@color/bule_main"
        android:gravity="center"
        android:text="尾零装袋"
        android:textColor="@color/white"
        android:textSize="30sp" />

</LinearLayout>
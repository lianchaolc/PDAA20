<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70y"
            android:background="@color/gray_background"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:textSize="@dimen/text_size_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:layout_weight="1"
                android:gravity="center"
                android:text="钞箱编号"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/TextView02"
                android:textSize="@dimen/text_size_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:layout_weight="1"
                android:gravity="center"
                android:text="品牌信息"
                android:textColor="@color/red"
                tools:ignore="all"/>

            <TextView
                android:id="@+id/boxnum_detail"
                android:textSize="@dimen/text_size_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:text="加钞金额"
                android:textColor="@color/red" />
            <TextView
                android:id="@+id/TextView02"
                android:textSize="@dimen/text_size_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="是否加钞"
                android:textColor="@color/red"
                tools:ignore="all"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listview_boxdetial"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_465y"
                android:layout_weight="1"
                android:background="@color/white" >
            </ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60y"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/money_count"
                    android:textSize="@dimen/text_size_30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/money_count"
                    android:gravity="center"
                    android:text="合计"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/money_countNum"
                    android:textSize="@dimen/text_size_30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/moneyconut_num"
                    android:gravity="center"
                    android:text="0万"
                    android:textColor="@color/red" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
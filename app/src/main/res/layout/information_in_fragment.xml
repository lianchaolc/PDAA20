<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_600y"
    android:paddingLeft="10px"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70y"
        android:orientation="horizontal"
        xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/dimen_8x"
            android:id="@+id/planft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加钞计划编号:" />

        <TextView
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_22"
            android:id="@+id/planf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=""
             />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150y"
        android:orientation="horizontal" >

        <TextView
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/dimen_8x"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加钞路线:"
            tools:ignore="all"/>

        <TextView
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_22"
            android:id="@+id/wayf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="东丽支行中心库二线"
             />

    </LinearLayout>
    
     <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70y"
        android:orientation="horizontal" >

        <TextView
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/dimen_8x"
            android:id="@+id/textView1"
            tools:ignore="all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划类型:" />

        <TextView
			android:textColor="@color/gray"
            android:textSize="@dimen/text_size_22"
            android:id="@+id/typef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="在线式"
             />

    </LinearLayout>
    
      <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70y"
        android:orientation="horizontal" >

        <TextView
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/dimen_8x"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总金额:"
            tools:ignore="all"/>

        <TextView
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_22"
            android:id="@+id/moneyf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="80万"
             />

    </LinearLayout>
    
       <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70y"
        android:orientation="horizontal" >

        <TextView
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/dimen_8x"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钞箱数量:"
            tools:ignore="all"/>

        <TextView
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_22"
            android:id="@+id/boxnumf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="4"
             />

    </LinearLayout>
    
        <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70y"
        android:orientation="horizontal" >

        <TextView
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/dimen_8x"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加钞日期:"
            tools:ignore="all"/>

        <TextView
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_22"
            android:id="@+id/datef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="2014-5-5"
             />

    </LinearLayout>

</LinearLayout>
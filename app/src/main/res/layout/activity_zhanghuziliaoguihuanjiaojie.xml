<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEE"
    android:orientation="vertical" >
<!-- 2020-05-22-查看2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_50x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            style="@style/TextView_TitleStyle"
            android:text="账户资料归还交接"
            android:textColor="@color/white"
         />


        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_60x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:layout_marginRight="@dimen/dimen_8x"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="操作人:"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/accountreturnhandover_check_tvusername1"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text=""
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:layout_marginRight="@dimen/dimen_8x"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="操作人:"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/tvusername2"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="李三样"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10y"
        android:layout_marginTop="@dimen/dimen_10y"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80y"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="出库任务编号:"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/accountreturnhandover_check_number"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text=""
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10y"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60y"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/dimen_0x"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_10x"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="待扫描 :"
                        android:textColor="@color/back"
                        android:textSize="@dimen/text_size_28" />

                    <TextView
                        android:id="@+id/accountreturnhandover_check_scnnumber_tvleft"
                        android:layout_width="@dimen/dimen_0x"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="0"
                        android:textColor="@color/back"
                        android:textSize="@dimen/text_size_28" >
                    </TextView>
                </LinearLayout>

                 <LinearLayout
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/dimen_0x"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_10x"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="已扫描 :"
                        android:textColor="@color/back"
                        android:textSize="@dimen/text_size_28" />

                    <TextView
                        android:id="@+id/accountreturnhandover_check_unscannumberright"
                        android:layout_width="@dimen/dimen_0x"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="0"
                        android:textColor="@color/back"
                        android:textSize="@dimen/text_size_28" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1y"
                android:background="#E6E5E5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_350y"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ListView
                    android:id="@+id/accountreturnhandover_check_leftlistview"
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_8x"
                    android:layout_marginRight="@dimen/dimen_8x"
                    android:layout_weight="1"
                    android:divider="#00000000" >
                </ListView>

                <View
                    android:layout_width="@dimen/dimen_1x"
                    android:layout_height="match_parent"
                    android:background="#E6E5E5" />

                <ListView
                    android:id="@+id/accountreturnhandover_check_rightlistview"
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_8x"
                    android:layout_marginRight="@dimen/dimen_8x"
                    android:layout_weight="1"
                    android:divider="#00000000" >
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_marginLeft="@dimen/dimen_10x"
        android:layout_marginRight="@dimen/dimen_10x"
        android:layout_marginTop="@dimen/dimen_10y"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/accountintion_btnsure"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:gravity="center"
            android:text="交接"
            android:textSize="@dimen/text_size_30" />

        <Button
            android:id="@+id/accountintion_btncancle"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/text_size_30" />
    </LinearLayout>

</LinearLayout>
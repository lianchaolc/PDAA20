<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10y"
                android:layout_marginTop="@dimen/dimen_20y" >

                <TextView
                    android:layout_width="@dimen/dimen_150x"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_30x"
                    android:text="凭证种类："
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:id="@+id/tv_zhuangxiang_zhongkong_type"
                    android:layout_width="@dimen/dimen_250x"
                    android:layout_height="@dimen/dimen_60y"
                    android:background="@drawable/money_count"
                    android:gravity="center_vertical"
                    android:paddingLeft="5px"
                    android:text="请选择"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8y" >

                <TextView
                    android:layout_width="@dimen/dimen_100x"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_30x"
                    android:text="数量："
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_30" />

                <EditText
                    android:id="@+id/ed_zhuangxiang_zhongkong_count"
                    android:layout_width="@dimen/dimen_300x"
                    android:layout_height="@dimen/dimen_60y"
                    android:background="@drawable/money_count"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="5px"
                    android:textSize="@dimen/text_size_30" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_zhuangxiang_zhongkong_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dimen_50x"
                android:text="添加"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_30" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_1y"
                android:layout_margin="5px"
                android:background="@drawable/gradient_white_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20x"
                    android:text="已录入:"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_35" />

                <TextView
                    android:id="@+id/tv_zhuangxiang_zhongkong_yiluru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10x"
                    android:text=""
                    android:textSize="@dimen/text_size_35"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_40x"
                    android:text="未录入:"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_35" />

                <TextView
                    android:id="@+id/tv_zhuangxiang_zhongkong_weiluru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10x"
                    android:text=""
                    android:textSize="@dimen/text_size_35"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_1y"
                android:layout_margin="5px"
                android:background="@drawable/gradient_white_gray" />

            <LinearLayout
                android:layout_width="@dimen/dimen_400x"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <TextView
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:gravity="center"
                    android:text="凭证种类"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_35" />

                <TextView
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.9"
                    android:gravity="center"
                    android:text="数量"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_35" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

            <ListView
                android:id="@+id/lv_zhuangxiang_zhongkong_info"
                android:layout_width="@dimen/dimen_400x"
                android:layout_height="@dimen/dimen_50y"
                android:divider="@color/white"
                android:layout_gravity="center" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ljsw.pdachecklibrary.CheckLibraryUpdataActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/checklibrarybydizhi_imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/check_libraryupdata_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="盘库任务补扫"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40"
            tools:ignore="all" />

        <Button
            android:id="@+id/check_libraryupdata_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_4y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/check_libraryupdata_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y">

        <TextView
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="操作人:"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:id="@+id/tv_checklibraryupdatauser"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="张某"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y">

        <TextView
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="格子编号:"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:id="@+id/tv_checklibraryupdatapointno"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="张某"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="隔断"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="标签编号"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="状态"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_checklibraryupata"
        android:layout_width="match_parent"
        android:divider="#00000000"
        android:layout_height="@dimen/dimen_400y"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_updatastop"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10y"
            android:layout_marginRight="@dimen/dimen_10y"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:text="暂停"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/checlibraryupdatabtn"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10y"
            android:layout_marginRight="@dimen/dimen_10y"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:text="提交"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>

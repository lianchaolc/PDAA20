<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50y" >
        <fragment
            android:id="@+id/fragment1"
            android:name="com.ljsw.tjbankpda.qf.fragment.LoginUserInfoFragment"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
	
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/u20"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75y"
            android:background="@color/blue_title"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:src="@drawable/u24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_45y"
                android:text="周转箱核对扫描"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical"
                android:textSize="@dimen/title_text_size" />
            <ImageView
                android:id="@+id/qingfen_backS1"
                android:layout_marginLeft="@dimen/dimen_45x"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:src="@drawable/back_change" />
        </LinearLayout>

        
        
       
        <LinearLayout
            android:id="@+id/qingling"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_90y" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="@dimen/dimen_0x"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#DC143C"
                android:textSize="@dimen/text_size_35"
                android:text="未扫描:" />

            <TextView
                android:id="@+id/qf_weisaomiao"
                android:layout_width="@dimen/dimen_0x"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_35"
                android:layout_height="wrap_content"
                android:text="0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="@dimen/dimen_0x"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#DC143C"
                android:textSize="@dimen/text_size_35"
                android:layout_height="wrap_content"
                android:text="已扫描:" />

            <TextView
                android:id="@+id/qf_yisaomiao"
                android:layout_width="@dimen/dimen_0x"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_35"
                android:layout_height="wrap_content"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_90y"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="@dimen/dimen_0x"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#DC143C"
                android:textSize="@dimen/text_size_35"
                android:text="未扫描周转箱" />
            
            <TextView
                android:id="@+id/textView8"
                android:layout_width="@dimen/dimen_0x"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#DC143C"
                android:textSize="@dimen/text_size_35"
                tools:ignore="all"
                android:text="已扫描周转箱" />

            
        </LinearLayout>

        
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/dimen_1y"
		    android:background="@drawable/u25"/>

		     <LinearLayout
		         android:layout_width="match_parent"
		         android:layout_height="@dimen/dimen_225y"
		         android:orientation="horizontal"
		          >

		         <ListView
		             android:id="@+id/wsm_list"
		             android:layout_width="match_parent"
		             android:layout_height="match_parent"
		             android:layout_weight="1"
		             android:divider="#000000" >
		         </ListView>

		         <ListView
		             android:id="@+id/ysm_list"
		             android:layout_width="match_parent"
		             android:layout_height="match_parent"
		             android:layout_weight="1"
		             android:divider="#000000" >
		         </ListView>
		     </LinearLayout>

            <TextView
                android:id="@+id/zzXbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="#DC143C"
                android:textSize="@dimen/text_size_35" />

           
		 
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_22y"
            android:layout_height="@dimen/dimen_90y" >

            <Button
                android:id="@+id/btn_heduicg"
                android:layout_width="@dimen/dimen_225x"
                android:layout_height="@dimen/dimen_75y"
                android:background="@drawable/gray_btn_bg"
                android:enabled="true"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_40"
                android:text="核对成功" />

            <Button
                android:id="@+id/btn_quxiao"
                android:layout_width="@dimen/dimen_225x"
                android:layout_height="@dimen/dimen_75y"
                 android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/buttom_selector_bg"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:textSize="@dimen/text_size_40"
                android:textColor="#000000"
                android:text="取消" />

        </LinearLayout>
            
    </LinearLayout>
    
</LinearLayout>
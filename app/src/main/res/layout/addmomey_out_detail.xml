<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="#f6f6f6"
    android:orientation="vertical" >

    <LinearLayout
        android:gravity="center"
        android:background="@color/blue_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100y" >

        <ImageView
            android:layout_marginRight="@dimen/dimen_15x"
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_49x"
            android:layout_height="@dimen/dimen_50y"
            android:src="@drawable/momey_img" />

        <TextView
           android:textSize="@dimen/title_text_size"
           android:textColor="@color/white"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钞箱加钞操作" />

        <ImageView
            android:layout_marginLeft="@dimen/dimen_90x"
            android:id="@+id/addmoney_back"
            android:layout_width="@dimen/dimen_64x"
            android:layout_height="@dimen/dimen_65y"
            android:src="@drawable/back_cirle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:background="@color/gray_msg_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y" >

            <TextView
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_30"
                android:id="@+id/domsg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="请扫描钞箱" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_40y"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/TextView05"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前扫描的钞箱:"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/showboxnum"
                android:textSize="@dimen/text_size_25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_40y"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/TextView03"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待加钞钞箱个数:"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/waiteaddbox"
                android:textSize="@dimen/text_size_25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_40y"
            android:gravity="center_vertical" >

            <TextView
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/red"
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加钞计划编号:" />

            <TextView
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/back"
                android:id="@+id/addmoneyout_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y"
            android:layout_marginTop="@dimen/dimen_10y"
            android:background="@drawable/circle_edit_rudit"
            android:gravity="center" >

            <TextView
                android:textColor="@color/red"
                android:id="@+id/textView3"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钞箱编号:" />

            <TextView
                android:textSize="@dimen/text_size_30"
                android:id="@+id/addmoneyout_planNum"
                android:textColor="@color/back"
                android:layout_width="@dimen/dimen_320x"
                android:layout_height="@dimen/dimen_45y"
                android:background="#dde8f4"
                android:ems="10" >

                <requestFocus />
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y"
            android:layout_marginTop="@dimen/dimen_10y"
            android:background="@drawable/circle_edit_rudit"
            android:gravity="center_vertical" >

            <TextView
                android:layout_marginLeft="@dimen/dimen_10x"
                android:id="@+id/TextView02"
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加钞余额:" />

            <TextView
                android:textSize="@dimen/text_size_30"
                android:id="@+id/addmoenyout_money"
                android:textColor="@color/back"
                android:layout_width="@dimen/dimen_280x"
                android:layout_height="@dimen/dimen_45y"
                android:background="#dde8f4"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y"
            android:layout_marginTop="@dimen/dimen_10y"
            android:background="@drawable/circle_edit_rudit"
            android:gravity="center" >

            <TextView
                android:id="@+id/TextView04"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:text="当前扫描总额:"
                android:textColor="@color/red" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/addmoneytoal"
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/red"
                android:layout_width="@dimen/dimen_290x"
                android:layout_height="@dimen/dimen_45y"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_210y"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listview_addmoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80y"
            android:gravity="center_horizontal" >

            <Button
                android:enabled="false"
                android:id="@+id/addmoney_suer_out"
                android:textSize="@dimen/text_size_35"
                android:textColor="@color/white"
                android:layout_width="@dimen/dimen_300x"
                android:layout_height="@dimen/dimen_60y"
                android:background="@drawable/button_gray"
                android:text="确定" />

            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
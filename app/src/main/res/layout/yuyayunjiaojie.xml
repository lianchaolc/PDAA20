<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100y"
        android:background="@color/blue_title"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30x"
            android:text="押运员交接"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

       <!--  <ImageView
            android:id="@+id/image_yyjj"
            android:layout_width="@dimen/dimen_70x"
            android:layout_height="@dimen/dimen_70y"
            android:layout_marginLeft="@dimen/dimen_172x"
            android:src="@drawable/back_cirle" /> -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100y"
        android:layout_marginTop="@dimen/dimen_8y"
        android:background="@color/blue_top"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_22x"
            android:text="请按手指："
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginLeft="@dimen/dimen_8x"
        android:layout_marginRight="@dimen/dimen_8x"
        android:background="@drawable/view_hr_backgroud" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100y"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="押运员"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginLeft="@dimen/dimen_8x"
        android:layout_marginRight="@dimen/dimen_8x"
        android:background="@drawable/view_hr_backgroud" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_340y"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/yayunjiaojie_img"
            android:layout_width="@dimen/dimen_220x"
            android:layout_height="@dimen/dimen_220y"
            android:src="@drawable/wihte_bg" />

        <TextView
            android:id="@+id/yayunjiaojie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginLeft="@dimen/dimen_8x"
        android:layout_marginRight="@dimen/dimen_8x"
        android:background="@drawable/view_hr_backgroud" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100y"
        android:gravity="center"
        android:background="@color/blue_top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/yayunjiaojie_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请押运员按手指......"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

</LinearLayout>
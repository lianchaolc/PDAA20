<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_80x"
    android:layout_marginBottom="@dimen/dimen_5x"
    android:layout_marginTop="@dimen/dimen_5x"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvlinname"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_10x"
        android:layout_marginRight="@dimen/dimen_10x"
        android:layout_weight="4"
        android:gravity="center"
        android:text="北城一线"
        android:textColor="@color/back"
        android:textSize="@dimen/text_size_30" />

    <TextView
        android:id="@+id/tvlinecounts"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_10x"
        android:layout_marginRight="@dimen/dimen_10x"
        android:layout_weight="1"
        android:background="@color/red"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/back"
        android:textSize="@dimen/text_size_30" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
     >

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
         >

        <TextView
            android:textSize="@dimen/text_size_25"
            android:layout_marginBottom="@dimen/dimen_10y"
            android:textColor="@color/back"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_5x"
            android:text="正在下载新版本，请稍候..." />

        <LinearLayout
            android:paddingLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ProgressBar
                android:id="@+id/progress_version"
                style="@style/ProgressBar_Mini"
                android:layout_width="@dimen/dimen_370x"
                android:layout_height="@dimen/dimen_20y"
                android:max="100" />

            <TextView
                android:id="@+id/percentText"
                android:textSize="@dimen/text_size_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/back" />

        </LinearLayout>

    </LinearLayout>
  			<!--  
            style="?android:attr/progressBarStyleHorizontal"
            -->
</LinearLayout>
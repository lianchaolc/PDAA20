                android:layout_marginRight="@dimen/dimen_60x"
                android:background="@drawable/u40"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_35" />
        </RelativeLayout>

        <View

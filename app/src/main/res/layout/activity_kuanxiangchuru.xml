<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homemenu_box"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/textView1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80y"
                android:background="@color/bule_main" >

                <!-- <ImageView
                    android:id="@+id/churu_back"
                    android:layout_width="@dimen/dimen_64x"
                    android:layout_height="@dimen/dimen_64y"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dimen_30x"
                    android:src="@drawable/back_change" /> -->

                <ImageView
                    android:id="@+id/churu_shuaxin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/refplace_cirle_press" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00aeFF"
                android:orientation="vertical" >

                <fragment
                    android:id="@+id/head_fragment"
                    android:name="com.example.app.fragment.Head_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50y" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/zaochu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80y"
                android:background="@color/bule_main" >

                <ImageView
                    android:id="@+id/updatepass"
                    android:layout_width="@dimen/dimen_60x"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_30x"
                    android:src="@drawable/user_order" />

                <TextView
                    android:id="@+id/textView1"
                    android:textSize="@dimen/text_size_40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_11x"
                    android:layout_toRightOf="@+id/updatepass"
                    android:text="款箱早送出库"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/zaosong_wangdian"
                    android:textSize="@dimen/text_size_25"
                    android:layout_width="@dimen/dimen_50x"
                    android:layout_height="@dimen/dimen_40y"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_16x"
                    android:layout_toLeftOf="@+id/zaosong_kuanxiangcount"
                    android:background="@drawable/business_number"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/zaosong_kuanxiangcount"
                    android:textSize="@dimen/text_size_25"
                    android:layout_width="@dimen/dimen_50x"
                    android:layout_height="@dimen/dimen_40y"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_20x"
                    android:background="@drawable/business_number2"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <ListView
                android:id="@+id/churu_listView1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_450y" >
            </ListView>

            <RelativeLayout
                android:id="@+id/wanru"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80y"
                android:background="@color/bule_main" >

                <ImageView
                    android:id="@+id/updatepass"
                    android:layout_width="@dimen/dimen_60x"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_30x"
                    android:src="@drawable/user_order2" />

                <TextView
                    android:id="@+id/textView1"
                    android:textSize="@dimen/text_size_40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_11x"
                    android:layout_toRightOf="@+id/updatepass"
                    android:text="款箱晚收入库"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/wanru_wangdian"
                    android:textSize="@dimen/text_size_25"
                    android:layout_width="@dimen/dimen_50x"
                    android:layout_height="@dimen/dimen_40y"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_16x"
                    android:layout_toLeftOf="@+id/wanru_kuanxiangcount"
                    android:background="@drawable/business_number"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/wanru_kuanxiangcount"
                    android:textSize="@dimen/text_size_25"
                    android:layout_width="@dimen/dimen_50x"
                    android:layout_height="@dimen/dimen_40y"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_20x"
                    android:background="@drawable/business_number2"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white" />
            </RelativeLayout>
			<!-- revised By zhangXueWei -->	
            <ListView
                android:id="@+id/churu_listView2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_450y"
                android:visibility="gone" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
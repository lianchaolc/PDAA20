<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".HomeMangeerToCenterDataScanActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="15px"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="现金装袋数据核对扫描"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_26" />

        <Button
            android:id="@+id/ql_ruku_update"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="5px"
            android:layout_marginTop="5px"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="5px"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="80dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="未扫描:"
                android:textColor="@color/back"
                android:textSize="28px" />

            <TextView
                android:id="@+id/homepackger_tvleft"
                android:layout_width="0dip"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="0"
                android:textColor="@color/back"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="80dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="已扫描:"
                android:textColor="@color/back"
                android:textSize="28px" />

            <TextView
                android:id="@+id/homepackgerright"
                android:layout_width="0dip"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="0"
                android:textColor="@color/back"
                android:textSize="28px" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#E6E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/lefthometoclean_listview"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:divider="#00000000" >
        </ListView>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#E6E5E5" />

        <ListView
            android:id="@+id/righthometoclean_listview"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:divider="#00000000" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_hometoclean_jiaojie"
            android:layout_width="0dip"
            android:layout_height="60px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:gravity="center"
            android:text="交接"
            android:textColor="@color/white"
            android:textSize="30px" />

        <Button
            android:id="@+id/btn_hometoclean_cancle"
            android:layout_width="0dip"
            android:layout_height="60px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="30px" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_400x"
    android:layout_height="@dimen/dimen_50y"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_item_qinglingmingzi_type"
        android:layout_width="@dimen/dimen_0x"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_size_35"
        android:textColor="@color/back"
        android:text="类型" />

    <TextView
        android:id="@+id/tv_item_qinglingmingzi_count"
        android:layout_width="@dimen/dimen_0x"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_size_35"
        android:textColor="@color/back"
        android:text="数量" />

</LinearLayout>
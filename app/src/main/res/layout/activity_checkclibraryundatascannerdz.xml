<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="抵押补扫盘提交"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/checkelibrarydz_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_100x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="@dimen/dimen_80y"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="@dimen/dimen_80y"
                android:layout_weight="1"
                android:gravity="center"
                android:text="操作人:"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/sancnnerbycheceklibraryname"
                android:layout_width="0dip"
                android:layout_height="@dimen/dimen_80y"
                android:layout_weight="1"
                android:gravity="center"
                android:text="白小白"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_10x"
        android:layout_marginRight="@dimen/dimen_10x"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="@dimen/dimen_60y"
            android:layout_weight="1"
            android:gravity="center"
            android:text="抵质押品编号"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />

        <TextView
            android:id="@+id/postmans_tvleft"
            android:layout_width="0dip"
            android:layout_height="@dimen/dimen_60y"
            android:layout_weight="1"
            android:gravity="center"
            android:text="状态"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="#E6E5E5" />

    <ListView
        android:id="@+id/checkelibrarydz__listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_10x"
        android:layout_marginRight="@dimen/dimen_10x"
        android:layout_weight="1"
        android:divider="#00000000"></ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="#E6E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_400y"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_tijiaobycheceklibrary"
            android:layout_width="0dip"
            android:layout_height="@dimen/dimen_60y"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提交数据"
            android:textColor="@color/back"
            android:background="@drawable/buttom_selector_bg"
            android:textSize="@dimen/text_size_28" />

        <Button
            android:id="@+id/btn_canclesancnnerbycheceklibrary"
            android:layout_width="0dip"
            android:layout_height="@dimen/dimen_60y"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消清空"
            android:textColor="@color/back"
            android:background="@drawable/buttom_selector_bg"
            android:textSize="@dimen/text_size_28" />
    </LinearLayout>
</LinearLayout>
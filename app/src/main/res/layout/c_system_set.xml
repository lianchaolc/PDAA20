<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue_top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50y"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎你:张三"
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dimen_10x" 
                android:layout_weight="1"
                android:layout_gravity="center"/>
            
             <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="东丽中心支行"
                android:layout_marginRight="@dimen/dimen_10x"
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/white" 
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right"/>

        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_750y"
        android:layout_weight="1"
        android:orientation="vertical" 
        android:gravity="center"
        android:background="#2459b2">

        <LinearLayout
            android:layout_width="@dimen/dimen_380x"
            android:layout_height="@dimen/dimen_600y">

            <LinearLayout
                android:layout_width="@dimen/dimen_190x"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200y"
                    android:orientation="vertical"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/netset"
                        android:layout_width="@dimen/dimen_110x"
                        android:layout_height="@dimen/dimen_110y"
                        android:src="@drawable/netset" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网络参数"
                        android:textSize="@dimen/text_size_30"
                		android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dimen_10y" />

                </LinearLayout>

                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200y"
                    android:orientation="vertical"
                    android:gravity="center" >

                      <ImageView
                          android:id="@+id/rfidreadwrite"
                          android:layout_width="@dimen/dimen_110x"
                          android:layout_height="@dimen/dimen_110y"
                          android:src="@drawable/writeandread" />

                      <TextView
                          android:textSize="@dimen/text_size_30"
                		  android:textColor="@color/white"
                          android:layout_marginTop="@dimen/dimen_10y"
                          android:id="@+id/rfidwr"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="RFID读写" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200y"
                    android:orientation="vertical"
                    android:gravity="center" >

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_190x"
                android:layout_height="match_parent"
                android:orientation="vertical" >

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200y"
                    android:orientation="vertical"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/dimen_110x"
                        android:layout_height="@dimen/dimen_110y"
                        android:src="@drawable/systemadmin_item" />
                     <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="参数设置"
                        android:textSize="@dimen/text_size_30"
                		android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dimen_10y" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200y"
                    android:orientation="vertical"
                    android:gravity="center" >

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200y"
                    android:orientation="vertical"
                    android:gravity="center" >


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00aeFF"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/head_fragment"
            android:name="com.example.app.fragment.Head_fragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50y" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:gravity="center_vertical"
        android:background="@color/bule_main" >

        <TextView
            android:id="@+id/title_jjName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_60x"
            android:text="晚收款箱交接"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40" />

        <!-- <ImageView
            android:id="@+id/wanshou_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_100x"
            android:src="@drawable/back_cirle" /> -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dimen_480x"
        android:layout_height="@dimen/dimen_80y" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_15y"
            android:text="配送线路："
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_35" />

        <TextView
            android:id="@+id/oxianlu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="东丽之行网点1"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dimen_480x"
        android:layout_height="@dimen/dimen_80y" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_10y"
            android:text="需要交接款箱数："
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_35" />

        <TextView
            android:id="@+id/kuanxiang_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_10y"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dimen_480x"
        android:layout_height="@dimen/dimen_80y" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_10y"
            android:text="扫描款箱数："
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_35" />

        <TextView
            android:id="@+id/wanshou_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_10y"
            android:text="0"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginLeft="@dimen/dimen_8x"
        android:layout_marginRight="@dimen/dimen_8x"
        android:background="@drawable/view_hr_backgroud" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45y"
        android:gravity="center" >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="款箱编号"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_230y" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_230y" >
            <ListView
                android:id="@+id/bianhaolistView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_230y" >
            </ListView>
        </LinearLayout>
    </ScrollView>

    <!-- <TextView
        android:id="@+id/textWrong"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_30"
        android:textColor="@color/red"
        android:text="" /> -->
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/wanshou_bt"
            android:layout_width="@dimen/dimen_150x"
            android:layout_height="@dimen/dimen_70y"
            android:textSize="@dimen/text_size_40"
            android:text="确定"
            android:enabled="false"
            android:background="@drawable/gray_btn_bg"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/wanshou_cs"
            android:layout_width="@dimen/dimen_150x"
            android:layout_height="@dimen/dimen_70y"
            android:background="@drawable/buttom_selector_bg"
            android:text="重扫"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40" />

    </LinearLayout>

</LinearLayout>
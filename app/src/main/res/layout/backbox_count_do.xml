<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="#f6f6f6"
    android:orientation="vertical" >

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/blue_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_123y" >

        <ImageView            
            android:layout_marginLeft="@dimen/dimen_15x"
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_49x"
            android:layout_height="@dimen/dimen_50y"
            android:src="@drawable/momey_img" />

        <TextView
            android:layout_marginLeft="@dimen/dimen_10x"
            android:textSize="@dimen/text_size_35"
            android:textColor="@color/white"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回收钞箱清点操作" />

        <ImageView
            android:layout_marginLeft="@dimen/dimen_50x"
            android:id="@+id/countback"
            android:layout_width="@dimen/dimen_64x"
            android:layout_height="@dimen/dimen_65y"
            android:src="@drawable/back_cirle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_500y"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y"
            android:layout_marginTop="@dimen/dimen_20y"
            android:gravity="center_vertical" >

            <TextView
                android:textSize="@dimen/text_size_35"
                android:textColor="@color/red"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请扫描钞箱编号..." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/red"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50y"
                android:text="未扫钞箱数量:" />

            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/red"
                android:id="@+id/notclear_box"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50y"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView03"
                android:textSize="@dimen/text_size_30"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50y"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:gravity="center_vertical"
                android:text="当前钞箱编号:"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/nowclearBox"
                android:textSize="@dimen/text_size_30"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50y"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:gravity="center_vertical"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginTop="@dimen/dimen_10y"
            android:background="@drawable/circle_edit_rudit"
            android:gravity="center_vertical" >

            <TextView
                android:layout_marginLeft="@dimen/dimen_20x"
                android:id="@+id/textView3"
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业务单号  :" />

            <TextView
                android:text=""
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_25"
                android:id="@+id/count_planNum"
                android:textColor="@color/back"
                android:layout_width="@dimen/dimen_300x"
                android:layout_height="@dimen/dimen_45y"
                android:background="#dde8f4"
                 >

                <requestFocus />
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y"
            android:layout_marginTop="@dimen/dimen_20y"
            android:background="@drawable/circle_edit_rudit"
            android:gravity="center_vertical" >

            <TextView
                android:layout_marginLeft="@dimen/dimen_20x"
                android:id="@+id/textView4"
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钞箱编号  :" />

            <TextView
                android:textSize="@dimen/text_size_30"
                android:id="@+id/count_boxnum"
                android:textColor="@color/back"
                android:layout_width="@dimen/dimen_300x"
                android:layout_height="@dimen/dimen_45y"
                android:background="#dde8f4"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y"
            android:layout_marginTop="@dimen/dimen_20y"
            android:background="@drawable/circle_edit_rudit"
            
            android:focusable="true"  
   			android:focusableInTouchMode="true"
             >

            <TextView
                android:layout_marginLeft="@dimen/dimen_15x"
                android:id="@+id/TextView02"
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钞箱余额  :" />

            <EditText
                android:inputType="number"
                android:layout_marginLeft="@dimen/dimen_30x"
                android:textSize="@dimen/text_size_30"
                android:background="@color/transparency"
                android:id="@+id/count_money"
                android:textColor="@color/gray"
                android:layout_width="@dimen/dimen_290x"
                android:layout_height="match_parent"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y"
            android:layout_marginTop="@dimen/dimen_20y"
            android:background="@drawable/circle_edit_rudit"
             >

            <TextView
                android:layout_marginLeft="@dimen/dimen_15x"
                android:id="@+id/TextView01"
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="废钞箱余额  :" />

            <EditText
                android:inputType="number"
                android:layout_marginLeft="@dimen/dimen_5x"
                android:background="@color/transparency"
                android:textSize="@dimen/text_size_30"
                android:id="@+id/count_fmoney"
                android:textColor="@color/gray"
                android:layout_width="@dimen/dimen_290x"
                android:layout_height="match_parent"
                android:ems="10" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70y"
        android:layout_marginTop="@dimen/dimen_60y"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/count_suer"
            android:textSize="@dimen/text_size_35"
            android:layout_width="@dimen/dimen_300x"
            android:layout_height="@dimen/dimen_60y"
            android:background="@drawable/button_gray"
            android:enabled="false"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
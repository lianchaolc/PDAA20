<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_123y"
        android:background="@color/blue_title"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_49x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/momey_img" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="回收钞箱清点操作"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_35" />

        <ImageView
            android:id="@+id/countback"
            android:layout_width="@dimen/dimen_64x"
            android:layout_height="@dimen/dimen_65y"
            android:layout_marginLeft="@dimen/dimen_50x"
            android:src="@drawable/back_cirle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_500y"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y"
            android:layout_marginTop="@dimen/dimen_20y"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请扫描钞箱编号..."
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_35" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50y"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:gravity="center_vertical"
                android:text="未扫钞箱数量:"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/notclear_box"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50y"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50y"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:gravity="center_vertical"
                android:text="当前钞箱编号:"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/nowclearBox"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50y"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:gravity="center_vertical"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginTop="@dimen/dimen_10y"
            android:background="@drawable/circle_edit_rudit"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:text="业务单号  :"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_25" />

            <TextView
                android:id="@+id/count_planNum"
                android:layout_width="@dimen/dimen_300x"
                android:layout_height="@dimen/dimen_45y"
                android:background="#dde8f4"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_25">

                <requestFocus />
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y"
            android:layout_marginTop="@dimen/dimen_20y"
            android:background="@drawable/circle_edit_rudit"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:text="钞箱编号  :"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_25" />

            <TextView
                android:id="@+id/count_boxnum"
                android:layout_width="@dimen/dimen_300x"
                android:layout_height="@dimen/dimen_45y"
                android:background="#dde8f4"
                android:ems="10"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y"
            android:layout_marginTop="@dimen/dimen_20y"
            android:background="@drawable/circle_edit_rudit"

            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:text="钞箱余额  :"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_25" />

            <EditText
                android:id="@+id/count_money"
                android:layout_width="@dimen/dimen_290x"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_30x"
                android:background="@color/transparency"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y"
            android:layout_marginTop="@dimen/dimen_20y"
            android:background="@drawable/circle_edit_rudit">

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:text="废钞箱余额  :"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_25" />

            <EditText
                android:id="@+id/count_fmoney"
                android:layout_width="@dimen/dimen_290x"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_5x"
                android:background="@color/transparency"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/backbox_checkebtn"
        android:layout_width="@dimen/dimen_300x"
        android:layout_height="@dimen/dimen_60y"
        android:background="@drawable/button_gray"
        android:textColor="@color/white"
        android:gravity="center"
        android:visibility="gone"
        android:text="复核数据" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70y"
        android:layout_marginTop="@dimen/dimen_60y"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/count_suer"
            android:layout_width="@dimen/dimen_300x"
            android:layout_height="@dimen/dimen_60y"
            android:background="@drawable/button_gray"
            android:enabled="false"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

</LinearLayout>
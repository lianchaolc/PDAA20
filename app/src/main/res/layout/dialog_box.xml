<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_400x"
    android:layout_height="@dimen/dimen_700y"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_5y"
        android:text="请补全钞箱"
        android:textColor="@color/back"
        android:textSize="@dimen/text_size_30" />

    <Button
        android:id="@+id/btnlgoin"
        android:textSize="@dimen/text_size_35"
        android:layout_width="@dimen/dimen_270x"
        android:layout_height="@dimen/dimen_60y"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_20y"
        android:clickable="true"
        android:background="@drawable/buttom_selector_bg"
        android:text="确定"
        android:textColor="@color/white" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_285y"
        android:layout_above="@+id/btnlgoin"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40y"
        android:id="@+id/title"
        android:layout_below="@id/textView1" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/dimen_200x"
            android:layout_height="match_parent"
            android:text="钞箱品牌"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/back"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/dimen_200x"
            android:layout_height="match_parent"
            android:text="钞箱编号"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/back"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_msg_bg"
    xmlns:tools="http://schemas.android.com/tools"
     >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title" >

        <LinearLayout
            android:layout_width="@dimen/dimen_72x"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_40x"
                android:layout_height="@dimen/dimen_40y"
                android:src="@drawable/systemsetadd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_280x"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:textSize="@dimen/text_size_35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15y"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginTop="@dimen/dimen_15y"
                android:text="修改服务器地址"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_110x"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/webserviceid"
                android:layout_width="@dimen/dimen_70x"
                android:layout_height="@dimen/dimen_70y"
                android:src="@drawable/back_cirle" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/dimen_20y"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:textSize="@dimen/text_size_30"
        android:textColor="@color/back"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_alignParentLeft="true"
        android:text="请在下方输入空间地址"
        tools:ignore="all"/>

    <EditText
        android:paddingLeft="5px"
        android:text=""
        android:textSize="@dimen/text_size_22"
        android:background="@color/white"
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:ems="10" >
        <requestFocus />
    </EditText>
    

    <TextView
        android:layout_marginTop="@dimen/dimen_10y"
        android:id="@+id/TextView01"
        android:textSize="@dimen/text_size_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:text="请在下方输入webservice地址"
        android:textColor="@color/back" />

    <EditText
        android:paddingLeft="5px"
        android:text=""
        android:textSize="@dimen/text_size_22"
        android:id="@+id/webservice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:background="@color/white"
        android:ems="10" />
     <TextView
        android:layout_marginTop="@dimen/dimen_30y"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:textSize="@dimen/text_size_30"
        android:textColor="@color/back"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_alignParentLeft="true"
        android:text="请在下方输入三期的地址空间"
         tools:ignore="all"/>
    <EditText
        android:paddingLeft="5px"
        android:text=""
        android:textSize="@dimen/text_size_22"
        android:background="@color/white"
        android:id="@+id/space_three"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:ems="10" >

        <requestFocus />
</EditText>
   <TextView
        android:layout_marginTop="@dimen/dimen_10y"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:textSize="@dimen/text_size_30"
        android:textColor="@color/back"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_alignParentLeft="true"
        android:text="输三期webserviceip地址"
        tools:ignore="all"/>
    
    <EditText
        android:id="@+id/etipadressthree"
        android:paddingLeft="5px"
        android:text=""
        android:textSize="@dimen/text_size_22"
        android:background="@color/white"
        android:hint="请输入访问的ip地址"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:ems="10"
        ></EditText>
    <LinearLayout
        android:layout_marginTop="@dimen/dimen_30y"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30"
            android:background="@drawable/buttom_selector_bg"
            android:id="@+id/changeweb"
            android:layout_width="@dimen/dimen_250x"
            android:layout_height="@dimen/dimen_70y"
            android:text="确定保存" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_boder"
    android:orientation="vertical"
    tools:context="com.clearadmin.pda.SelectATMByBlcakMoneyBoxCountDoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_123y"
        android:background="@color/blue_title"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/select_atm_imageView1"
            android:layout_width="@dimen/dimen_49x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/momey_img" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="回收钞箱清点选ATM"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_35" />

        <ImageView
            android:id="@+id/select_atm_countback"
            android:layout_width="@dimen/dimen_64x"
            android:layout_height="@dimen/dimen_65y"
            android:layout_marginLeft="@dimen/dimen_50x"
            android:src="@drawable/back_cirle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10x"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_60y"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编号"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_60y"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ATM名称"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_60y"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ATM编号"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30"></TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/recycleviewbybox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_10x"
        android:background="@color/white"></ListView>

</LinearLayout>

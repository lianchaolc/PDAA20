<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <!-- 2020-05-22-查看1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:background="@color/blue_title"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/dimen_80x"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/PDAsetting"
                android:layout_width="@dimen/dimen_40x"
                android:layout_height="@dimen/dimen_40y"
                android:src="@drawable/users" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_280x"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/accountcenter_login_title"
                android:textSize="@dimen/text_size_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_40y"
                android:text="后督中心人员登录"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_520y"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40y" >

            <LinearLayout
                android:layout_width="@dimen/dimen_180x"
                android:layout_height="@dimen/dimen_80y"
                android:background="@color/blue_title"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:textSize="@dimen/text_size_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请按手指"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_300x"
                android:layout_height="@dimen/dimen_80y"
                android:background="@color/blue_top"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/postmanaccount_top"
                    android:textSize="@dimen/text_size_30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_550y"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80y"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/dzypyy_usertextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="后督中心人员"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_45" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_250y"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/postmanaccount_image"
                    android:layout_width="@dimen/dimen_200x"
                    android:layout_height="@dimen/dimen_200y" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60y"
                android:gravity="center" >

                <TextView
                    android:id="@+id/postmanaccount_fname"
                    android:layout_width="@dimen/dimen_200x"
                    android:layout_height="@dimen/dimen_60y"
                    android:background="@color/blue_text_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_45" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/peisongjiaojie_yanshi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:background="@color/gray_msg_bg"
        android:gravity="center" >

        <TextView
            android:id="@+id/postmanaccount_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后督中心人员按指纹"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_40" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="@color/white"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dimen_50y">

    <fragment
        android:id="@+id/fragment1"
            android:name="com.ljsw.tjbankpda.db.fragment.TopFragment_db"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" />
    
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:weightSum="4"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:gravity="center_vertical"
            android:layout_weight="2.8"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:src="@drawable/user_order" />

            <TextView
                android:id="@+id/renwumingxi_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:text="上缴清分计划单"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_35" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:orientation="horizontal"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:layout_height="fill_parent" >

            <Button
                android:id="@+id/sj_qingfen_update"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginTop="@dimen/dimen_4y"
                android:layout_marginLeft="@dimen/dimen_8x"
                android:background="@drawable/replace" />

            <ImageView
                android:id="@+id/sj_qingfen_back"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:src="@drawable/back_cirle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100y"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划单号"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_35" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="fill_parent"
            android:background="@drawable/buttom_selector_bg" />

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周转箱数量"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_35" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_35" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@drawable/buttom_selector_bg" />

   

            <ListView
                android:id="@+id/sj_qingfen_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
 

</LinearLayout>
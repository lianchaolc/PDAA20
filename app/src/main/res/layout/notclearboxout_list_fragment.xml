<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
     > 
	    <TableLayout 
	        android:id="@+id/wayparent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6"
            android:orientation="vertical"
	        >  
            <TableRow >
                <TextView
                android:textSize="@dimen/text_size_20"
	            android:paddingLeft="5px"
                android:layout_weight="1"
                android:singleLine="false"
                android:background="#f6f6f6"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
	            android:id="@+id/sub_addmoney_plannum"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/dimen_30y"
	            android:text="加钞计划编号" />
	        
	        <TextView
	            android:textSize="@dimen/text_size_20"
	            android:paddingLeft="5px"
                android:layout_weight="1"
                android:singleLine="false"
                android:background="#f6f6f6"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
	            android:id="@+id/sub_addmoney_line"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/dimen_30y"
	            android:text="加钞路线" />
	        <TextView
	            android:textSize="@dimen/text_size_20"
	            android:paddingLeft="5px"
                android:layout_weight="1"
                android:singleLine="false"
                android:background="#f6f6f6"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
	            android:id="@+id/sub_box_type"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/dimen_30y"
	            android:text="计划类型" />
	         <TextView
	             android:textSize="@dimen/text_size_20"
	            android:paddingLeft="5px"
                android:layout_weight="1"
                android:singleLine="false"
	            android:id="@+id/sub_box_number"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/dimen_30y"
	            android:background="#f6f6f6"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
	            android:text="钞箱数量" />
				
			</TableRow>
        
        </TableLayout>
</LinearLayout> 
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:orientation="vertical"
    android:background="#43536e"
    android:gravity="center_horizontal"
    android:id="@+id/updatepwd_box"
     >

    <LinearLayout
        android:gravity="center_horizontal"
        android:background="@drawable/login_system_bg"
        android:layout_marginTop="@dimen/dimen_130y"
        android:layout_width="@dimen/dimen_430x"
        android:layout_height="@dimen/dimen_400y"
        android:orientation="vertical" >

        <LinearLayout
         
            
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_135y"
            android:layout_marginTop="@dimen/dimen_20y"
            android:background="@drawable/edit_bottom"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_70x"
                android:layout_marginBottom="@dimen/dimen_25y"
                android:id="@+id/PDAsetting"
                android:layout_width="@dimen/dimen_70x"
                android:layout_height="@dimen/dimen_70y"
                android:src="@drawable/updateimge" />

            <TextView
                android:layout_marginTop="@dimen/dimen_16y"
                android:id="@+id/textView1"
                android:textSize="@dimen/text_size_35"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"              
                android:layout_marginBottom="@dimen/dimen_25y"
                android:text="密码修改" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80y"
            android:background="@drawable/edit_bottom"
            android:gravity="center_vertical" >

            <TextView
                android:layout_marginLeft="@dimen/dimen_10x"
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/gray"
                android:id="@+id/uid11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="用 户 编 号 :" />

            <EditText
                android:id="@+id/uid"
                android:textColor="@color/gray"
                android:layout_width="@dimen/dimen_285x"
                android:layout_height="@dimen/dimen_65y"
                android:background="@drawable/wihte_bg"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80y"
            android:background="@drawable/edit_bottom"
            android:gravity="center_vertical" >

            <TextView
                android:layout_marginLeft="@dimen/dimen_10x"
                android:id="@+id/pwd11"
               android:textSize="@dimen/text_size_25"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="原    密    码:" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/pwd"
                android:textColor="@color/gray"
                android:layout_width="@dimen/dimen_285x"
                android:layout_height="@dimen/dimen_65y"
                android:background="@drawable/wihte_bg"
                android:ems="10" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75y"
            android:gravity="center_vertical" >

            <TextView
                android:layout_marginLeft="@dimen/dimen_10x"
                android:id="@+id/newpwd11"
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="新    密    码:" />

            <EditText
                android:id="@+id/newpwd"
                android:textColor="@color/gray"
                android:layout_width="@dimen/dimen_285x"
                android:layout_height="@dimen/dimen_65y"
                android:background="@drawable/wihte_bg"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_57y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:textSize="@dimen/text_size_35"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dimen_70x"
            android:background="@drawable/buttom_selector_bg"
            android:id="@+id/btnlgoin"
            android:layout_width="@dimen/dimen_170x"
            android:layout_height="@dimen/dimen_70y"
            android:text="确定" />

        <Button
            android:textSize="@dimen/text_size_35"
            android:textColor="@color/white"
            android:background="@drawable/buttom_selector_bg"
            android:id="@+id/btncancel"
            android:layout_width="@dimen/dimen_170x"
            android:layout_height="@dimen/dimen_70y"
            android:text="取消" />

    </LinearLayout>

</LinearLayout>
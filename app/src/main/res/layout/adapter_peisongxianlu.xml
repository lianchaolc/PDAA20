<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/adapter_peisong_qingling"
            android:layout_width="@dimen/dimen_0x"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_35" />

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="fill_parent"
            android:background="@drawable/view_hr_backgroud" />

        <TextView
            android:id="@+id/adapter_peisong_shangjiao"
            android:layout_width="@dimen/dimen_0x"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_35" />

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="fill_parent"
            android:background="@drawable/view_hr_backgroud" />

        <TextView
            android:id="@+id/adapter_peisong_xianlu"
            android:layout_width="@dimen/dimen_0x"
            android:layout_weight="2.5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_35" />

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="fill_parent"
            android:background="@drawable/view_hr_backgroud" />

        <TextView
            android:id="@+id/adapter_peisong_count"
            android:layout_width="@dimen/dimen_0x"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_35" />

        <View
            android:layout_width="@dimen/dimen_1x"
            android:layout_height="fill_parent"
            android:background="@drawable/view_hr_backgroud" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@drawable/view_hr_backgroud" />

</LinearLayout>
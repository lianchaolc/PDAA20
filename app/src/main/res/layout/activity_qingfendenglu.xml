<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:orientation="vertical"
    android:id="@+id/ll_qingfen_login"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:background="@color/blue_title"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_qingfen_login_PDAsetting"
            android:layout_width="@dimen/dimen_64x"
            android:layout_height="@dimen/dimen_64y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_gravity="center_vertical"
            android:src="@drawable/users" />

        <TextView
            android:id="@+id/tv_qingfen_login_title"
            android:layout_width="@dimen/dimen_300x"
            android:layout_height="@dimen/dimen_50y"
            android:text="清分员双人登录"
            android:textSize="@dimen/text_size_40"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_qingfen_login_back"
            android:layout_width="@dimen/dimen_70x"
            android:layout_height="@dimen/dimen_70y"
            android:layout_marginLeft="@dimen/dimen_30x"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back_change" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_500y"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40y" >

            <LinearLayout
                android:layout_width="@dimen/dimen_180x"
                android:layout_height="@dimen/dimen_80y"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/blue_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请按手指："
                    android:textSize="@dimen/text_size_30"
                	android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_300x"
                android:layout_height="@dimen/dimen_80y"
                android:background="@color/blue_top"
                android:orientation="vertical" >

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_30"
                    android:textColor="@color/white"
                    android:id="@+id/tv_qingfen_login_resultmsg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_350y"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/dimen_240x"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50y"
                    android:orientation="vertical" 
                    android:gravity="center">

                    <TextView
                        android:textSize="@dimen/text_size_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清分员"
                        android:textColor="@color/back" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/dimen_10y"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_230y"
                    android:orientation="vertical" >

                    <ImageView                      
                        android:visibility="visible"
                        android:id="@+id/iv_qingfen_login_finger_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                         />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70y"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_qingfen_login_name1"
                        android:layout_width="@dimen/dimen_200x"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/blue_text_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_30" />

                </LinearLayout>

            </LinearLayout>

           <LinearLayout
                android:layout_width="@dimen/dimen_240x"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50y"
                    android:orientation="vertical" 
                    android:gravity="center">

                    <TextView
                        android:textSize="@dimen/text_size_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清分员"
                        android:textColor="@color/back" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="@dimen/dimen_10y"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_230y"
                    android:orientation="vertical" >

                    <ImageView
                        android:visibility="visible"
                        android:id="@+id/iv_qingfen_login_finger_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70y"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_qingfen_login__name2"
                        android:layout_width="@dimen/dimen_200x"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/blue_text_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_30" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:gravity="center"
        android:background="@color/gray_msg_bg" >

        <TextView
            android:id="@+id/tv_qingfen_login_message"
            android:textSize="@dimen/text_size_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请第一位清分员按手指"
            android:textColor="@color/back" />

    </LinearLayout> 

</LinearLayout>
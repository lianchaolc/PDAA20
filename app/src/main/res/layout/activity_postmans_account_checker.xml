<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".PostmansAccountCheckerActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="后督账包核对"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/postmans_checkql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_100x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="@dimen/dimen_80y"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="@dimen/dimen_80y"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="操作人:"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/postmanstvusername1"
                android:layout_width="0dip"
                android:layout_height="@dimen/dimen_80y"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="白小白"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10y"
        android:layout_marginTop="@dimen/dimen_10y"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80y"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="@dimen/dimen_80y"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="未扫描:"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_28" />

                <TextView
                    android:id="@+id/postmans_tvleft"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_28" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="@dimen/dimen_80y"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="已扫描:"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_28" />

                <TextView
                    android:id="@+id/postmans_tvright"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_28" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1y"
            android:background="#E6E5E5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_400y"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/leftdzpostman_listview"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_weight="1"
                android:divider="#00000000" >
            </ListView>

            <View
                android:layout_width="@dimen/dimen_1x"
                android:layout_height="match_parent"
                android:background="#E6E5E5" />

            <ListView
                android:id="@+id/rightpostman_listview"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_weight="1"
                android:divider="#00000000" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_postmanaccount_jiaojie"
            android:layout_width="0dip"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:gravity="center"
            android:text="交接"
            android:textSize="@dimen/text_size_30" />

        <Button
            android:id="@+id/btn_postmanschukuhedui_cancle"
            android:layout_width="0dip"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/text_size_30" />
    </LinearLayout>

</LinearLayout>
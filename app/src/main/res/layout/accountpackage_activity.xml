<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="资料封包"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_50" />

        <Button
            android:id="@+id/ql_ruku_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_4y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_marginRight="@dimen/dimen_8x"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="操作人：张三"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" >
    </View>

    <LinearLayout
        android:id="@+id/apk_intonumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_marginRight="@dimen/dimen_8x"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_weight="2"
            android:gravity="center"
            android:text="账号账号"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" >
        </TextView>

        <EditText
            android:id="@+id/ap_et_number"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_weight="4"
            android:background="@drawable/money_count"
            android:gravity="center_vertical"
            android:hint="请输入账号"
            android:paddingLeft="5px"
            android:text=""
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_marginRight="@dimen/dimen_8x"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_weight="2"
            android:gravity="center"
            android:text="开户单位:"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="xxx公司"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_marginRight="@dimen/dimen_8x"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_weight="2"
            android:gravity="center"
            android:text="开户日期:"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" >
        </TextView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="2018-6-7"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_marginRight="@dimen/dimen_8x"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_weight="2"
            android:gravity="center"
            android:text="订单号："
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" >
        </TextView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="DL02018607001"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100y"
        android:layout_marginRight="@dimen/dimen_8x"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="封包袋编号"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />

        <TextView
            android:id="@+id/apkresultnum"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45y"
        android:layout_marginRight="@dimen/dimen_8x"
        android:layout_marginTop="@dimen/dimen_45y"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/apk_tijiao_btn"
            android:layout_width="@dimen/dimen_45x"
            android:layout_height="@dimen/dimen_45y"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:layout_marginRight="@dimen/dimen_8x"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:text="扫描封包"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />

        <Button
            android:id="@+id/apk_clean_btn"
            android:layout_width="@dimen/dimen_45x"
            android:layout_height="@dimen/dimen_45y"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:layout_marginRight="@dimen/dimen_8x"
            android:layout_weight="1"
            android:background="@drawable/buttom_selector_bg"
            android:text="封包"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />
    </LinearLayout>

</LinearLayout>
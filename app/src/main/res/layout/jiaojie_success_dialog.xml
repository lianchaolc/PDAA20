<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_38y"
        android:background="@color/gray"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_11y"
            android:textColor="@color/white"
            android:text="款箱晚收交接" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50y"
        android:orientation="vertical" >
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginRight="@dimen/dimen_8x"
        android:layout_marginLeft="@dimen/dimen_8x"
        android:background="@drawable/view_hr_backgroud"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200y"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sccuss" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:layout_marginTop="@dimen/dimen_8y"
            android:textColor="@color/red"
            android:text="交接晚收款项成功！" />

    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginRight="@dimen/dimen_8x"
        android:layout_marginLeft="@dimen/dimen_8x"
        android:background="@drawable/view_hr_backgroud"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150y"
        android:gravity="center"
        android:orientation="vertical" >
        <Button
            android:id="@+id/dialig_bt1"
            android:layout_width="@dimen/dimen_180x"
            android:layout_height="@dimen/dimen_80y"
            android:textSize="@dimen/text_size_20"
            android:layout_marginRight="@dimen/dimen_4x"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:textColor="@color/white"
            android:background="@drawable/buttom_selector_bg"
            android:text="确认" />
    </LinearLayout>

</LinearLayout>
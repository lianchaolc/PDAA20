<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_600y"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    
     <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70y"
        android:orientation="horizontal" >

        <TextView
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/dimen_8x"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="业务单号:" />

        <TextView
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_22"
            android:id="@+id/clear_biz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="业务单号"
             />

    </LinearLayout>
    
      <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70y"
        android:orientation="horizontal" >

        <TextView
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/dimen_8x"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清分时间:"
            tools:ignore="all"/>

        <TextView
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_22"
            android:id="@+id/clear_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="2012-12-12 16:00:00"
             />

    </LinearLayout>
    
       <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70y"
        android:orientation="horizontal" >

        <TextView
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/dimen_8x"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入库钞箱数量:"
            tools:ignore="all"/>

        <TextView
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_22"
            android:id="@+id/clear_boxnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="4"
             />

    </LinearLayout>
    
        <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70y"
        android:orientation="horizontal" >

        <TextView
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/dimen_8x"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入库日期:"
            tools:ignore="all"/>

        <TextView
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_22"
            android:id="@+id/clear_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="2014-5-5"
             />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y">

        <TextView
            android:id="@+id/adapter_kname"
            android:layout_width="@dimen/dimen_320x"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/gray"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:text="TextView" />
        
        <TextView
            android:id="@+id/adapter_kuanxiang"
            android:textSize="@dimen/text_size_25"
            android:layout_width="@dimen/dimen_40x"
            android:layout_height="@dimen/dimen_40y"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_20x"
            android:layout_alignParentRight="true"
            android:background="@drawable/business_number2"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/adapter_wangdian"
            android:textSize="@dimen/text_size_25"
            android:layout_width="@dimen/dimen_40x"
            android:layout_height="@dimen/dimen_40y"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_16x"
            android:background="@drawable/business_number"
            android:layout_toLeftOf="@+id/adapter_kuanxiang"
            android:textColor="@color/white"
            android:gravity="center"/>
        
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="#f6f6f6"
    android:orientation="vertical" >

    <LinearLayout
        android:gravity="center"
        android:background="@color/blue_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_123y" >

        <ImageView
            android:layout_marginRight="@dimen/dimen_10x"
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_49x"
            android:layout_height="@dimen/dimen_50y"
            android:src="@drawable/finger_img" />

        <TextView
            android:layout_marginTop="@dimen/dimen_5y"
           android:textSize="@dimen/text_size_40"
            android:textColor="@color/white"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清机加钞登录" />

        <ImageView
            android:layout_marginLeft="@dimen/dimen_80x"
            android:id="@+id/imageView2"
            android:layout_width="@dimen/dimen_64x"
            android:layout_height="@dimen/dimen_65y"
            android:src="@drawable/back_cirle" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_40y"
            android:background="@drawable/circle_edit_rudit"
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y" >

            <TextView
               android:textSize="@dimen/text_size_25"
                android:textColor="@color/gray"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构编号:" />

            <EditText
                android:textColor="@color/gray"
                android:background="#dde8f4"
                android:id="@+id/editText1"
                android:layout_width="@dimen/dimen_320x"
                android:layout_height="@dimen/dimen_45y"
                android:ems="10" >

                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_45y"
            android:background="@drawable/circle_edit_rudit"
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y" >

            <TextView
               android:textSize="@dimen/text_size_25"
                android:textColor="@color/gray"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="柜员编号:" />

            <EditText
                android:textColor="@color/gray"
                android:background="#dde8f4"
                android:id="@+id/editText2"
                android:layout_width="@dimen/dimen_320x"
                android:layout_height="@dimen/dimen_45y"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_30y"
            android:layout_width="@dimen/dimen_450x"
            android:layout_height="@dimen/dimen_53y" >

            <TextView
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/gray"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请加钞员按指纹" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200y" >
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:background="#d4d4d4"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:textSize="@dimen/text_size_35"
            android:textColor="@color/gray"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证成功" />

        <ImageView
            android:layout_marginLeft="@dimen/dimen_20x"
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dimen_56x"
            android:layout_height="@dimen/dimen_56y"
            android:src="@drawable/sccuss" />

    </LinearLayout>

</LinearLayout>
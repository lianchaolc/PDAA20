<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginTop="@dimen/dimen_10y"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="@dimen/dimen_0x"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_10x"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:text="待扫描:"
                        android:textColor="@color/back"
                        android:textSize="@dimen/text_size_30" />

                    <TextView
                        android:id="@+id/pleasepackstatisticsneedscan"
                        android:layout_width="@dimen/dimen_0x"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="0"
                        android:textColor="@color/back"
                        android:textSize="@dimen/text_size_30" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
            
                        android:layout_width="@dimen/dimen_0x"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="已扫描:"
                        android:textColor="@color/back"
                        android:textSize="@dimen/text_size_30" />

                    <TextView
                        android:id="@+id/pleasepackstatistic_hadscan"
                        android:layout_width="@dimen/dimen_0x"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="0"
                        android:textColor="@color/back"
                        android:textSize="@dimen/text_size_30" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1y"
                android:background="#E6E5E5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_400y"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ListView
                    android:id="@+id/pleasepackstatisticleft"
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_8x"
                    android:layout_marginRight="@dimen/dimen_8x"
                    android:layout_weight="1"
                    android:divider="#00000000" >
                </ListView>

                <View
                    android:layout_width="@dimen/dimen_1x"
                    android:layout_height="match_parent"
                    android:background="#E6E5E5" />

                <ListView
                    android:id="@+id/pleasepackstatisticright"
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_8x"
                    android:layout_marginRight="@dimen/dimen_8x"
                    android:layout_weight="1"
                    android:divider="#00000000" >
                </ListView>
            </LinearLayout>

           

        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.clearadmin.pda.SonLibraryCodeScanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="分库标签处理"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/librarytwocode_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_5y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/librarytwocode_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/back"
                android:text="扫描标签" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sonlibrary"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="扫描结果:"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:id="@+id/sonlibraytvshwo"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_toLeftOf="@+id/sonlibrary"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="按侧键二维码扫描-->"
                    android:textColor="@color/blue_top"
                    android:textSize="@dimen/text_size_30" />
            </LinearLayout>


            <Button
                android:id="@+id/btnupcode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80y"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:background="@drawable/buttom_selector_bg"
                android:gravity="center"
                android:text="获取二维码信息"
                android:textSize="30px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1x"
                android:layout_marginTop="@dimen/dimen_20y"
                android:background="@color/back"></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/back"
                android:text="标签信息" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_marginTop="@dimen/dimen_10y"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60x"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="袋号:"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:id="@+id/netreusltcode"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60x"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60x"
                    android:layout_weight="1"
                    android:text="类型:"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:id="@+id/netreuslttype"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60x"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60x"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="办理机构:"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:id="@+id/netreusltcontroller"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/back"
                    android:layout_marginBottom="@dimen/dimen_10x"
                    android:textSize="@dimen/text_size_30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60x"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="编号:"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:id="@+id/netreusltbianno"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60x"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="客户名称:"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:id="@+id/netreusltcoutrsname"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=""
                    android:layout_marginBottom="@dimen/dimen_10x"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_60x"
                    android:gravity="center|left"
                    android:text="柜号-"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_60x"
                    android:gravity="center"
                    android:text="柜面号-"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_60x"
                    android:gravity="center"
                    android:text="格子编号(列+行)-"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_60x"
                    android:gravity="center"
                    android:text="隔断"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/netreusltnum"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60x"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:id="@+id/netreusltnum2"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60x"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/netreusltnum3"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60x"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=""

                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/netreusltnum4"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60x"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1x"
                android:layout_marginTop="@dimen/dimen_20y"
                android:background="@color/back"></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/back"
                android:text="读写标签信息" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60x"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_marginTop="@dimen/dimen_10y"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/makeandrreadcard"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="制做标签"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_20" />

                <TextView
                    android:id="@+id/cardresult"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="结果"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_26" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80x"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_marginTop="@dimen/dimen_10x"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sonlibraymadekar"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10x"
                    android:layout_marginRight="@dimen/dimen_10x"
                    android:layout_weight="1"
                    android:background="@drawable/buttom_selector_bg"
                    android:text="制作标签"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/sonlibrayreader"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10x"
                    android:layout_marginRight="@dimen/dimen_10x"
                    android:layout_weight="1"
                    android:background="@drawable/buttom_selector_bg"
                    android:text="读标签信息"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1x"
                android:layout_marginTop="@dimen/dimen_20y"
                android:background="@color/back"></View>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

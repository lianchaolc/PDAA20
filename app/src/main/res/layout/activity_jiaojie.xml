<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homemenu_box"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/textView1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00aeFF"
                android:orientation="vertical" >

                <fragment
                    android:id="@+id/head_fragment"
                    android:name="com.example.app.fragment.Head_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50y" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80y"
                android:background="#00aeFF"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/updatepass"
                    android:layout_width="@dimen/dimen_60x"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_30x"
                    android:src="@drawable/user_order"
                    tools:ignore="all"/>

                <TextView
                    android:id="@+id/textView1"
                    android:textSize="@dimen/text_size_40"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_11x"
                    android:layout_toRightOf="@+id/updatepass"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="配送路线"
                    tools:ignore="all"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/jiaojie_shuaxin"
                    android:layout_width="@dimen/dimen_60x"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_30x"
                    android:layout_weight="1"
                    android:src="@drawable/refplace_cirle_press" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_60y"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/luxianName"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="无"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_30"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zaosong_jiaojie"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80y"
                android:gravity="center_vertical"
                android:background="@color/bule_main" >

                <ImageView
                    android:id="@+id/updatepass"
                    android:layout_width="@dimen/dimen_60x"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_marginLeft="@dimen/dimen_30x"
                    android:src="@drawable/user_order2"
                    tools:ignore="all"/>

                <TextView
                    android:id="@+id/textView1"
                    android:textSize="@dimen/text_size_35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20x"
                    android:layout_toRightOf="@+id/updatepass"
                    android:text="早送交接"
                    tools:ignore="all"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/zaosongjiaojie_kuanxiangcount"
                    android:textSize="@dimen/text_size_25"
                    android:layout_width="@dimen/dimen_40x"
                    android:layout_height="@dimen/dimen_40y"
                    android:layout_marginLeft="@dimen/dimen_112x"
                    android:background="@drawable/business_number"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/zaosongjiaojie_wangdiancount"
                    android:textSize="@dimen/text_size_25"
                    android:layout_width="@dimen/dimen_40x"
                    android:layout_height="@dimen/dimen_40y"
                    android:background="@drawable/business_number2"
                    android:layout_marginLeft="@dimen/dimen_22x"
                    android:gravity="center"
                    android:textColor="@color/white" />

            </LinearLayout>

            <ListView
                android:id="@+id/zaochu_listView2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_400y" >
            </ListView>

            <LinearLayout
                android:id="@+id/wanshou_jiaojie"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80y"
                android:gravity="center_vertical"
                android:background="@color/bule_main" >

                <ImageView
                    android:id="@+id/updatepass"
                    android:layout_width="@dimen/dimen_60x"
                    android:layout_height="@dimen/dimen_60y"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_30x"
                    android:src="@drawable/user_order"
                    tools:ignore="all"/>

                <TextView
                    android:id="@+id/textView1"
                    android:textSize="@dimen/text_size_35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_11x"
                    android:layout_toRightOf="@+id/updatepass"
                    android:text="晚收交接"
                    android:textColor="@color/white"
                    tools:ignore="all"/>

                 <TextView
                    android:id="@+id/wanrujiaojie_kuanxiangcount"
                    android:textSize="@dimen/text_size_25"
                    android:layout_width="@dimen/dimen_40x"
                    android:layout_height="@dimen/dimen_40y"
                    android:layout_marginLeft="@dimen/dimen_120x"
                    android:background="@drawable/business_number"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/wanrujiaojie_wangdiancount"
                    android:textSize="@dimen/text_size_25"
                    android:layout_width="@dimen/dimen_40x"
                    android:layout_height="@dimen/dimen_40y"
                    android:background="@drawable/business_number2"
                    android:layout_marginLeft="@dimen/dimen_22x"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <ListView
                android:id="@+id/wanshou_listView1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_510y"
                android:visibility="gone" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
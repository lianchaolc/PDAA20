<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10y"
            android:layout_marginTop="@dimen/dimen_30y"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_marginLeft="@dimen/dimen_10x"
                android:id="@+id/biznum"
                android:textSize="@dimen/text_size_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10x"
                android:gravity="center_vertical"
                android:text="业务单号:"
                android:textColor="@color/back" />

            <TextView
                android:id="@+id/biznumber"
                android:textSize="@dimen/text_size_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:ems="10"
                android:gravity="center_vertical"
                android:text="so1900"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/dimen_10y"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50y"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_marginLeft="@dimen/dimen_10x"
                android:id="@+id/boxs"
                android:textSize="@dimen/text_size_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10x"
                android:gravity="center_vertical"
                android:text="扫描钞箱数量:"
                android:textColor="@color/back" />

            <TextView
                android:id="@+id/boxvalue"
                android:textSize="@dimen/text_size_45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:ems="10"
                android:gravity="center_vertical"
                android:text="5"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50y"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView02"
                android:textSize="@dimen/text_size_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:layout_weight="1"
                android:gravity="center"
                android:text="品牌信息"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/TextView01"
                android:textSize="@dimen/text_size_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:text="数量"
                android:textColor="@color/red" />
        </LinearLayout>
    
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center_vertical"
         android:orientation="horizontal" >

         <ListView
             android:id="@+id/listview"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1" >
         </ListView>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>
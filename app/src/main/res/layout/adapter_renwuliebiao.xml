<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:orientation="horizontal"
        android:weightSum="7" >

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginLeft="@dimen/dimen_80x"
            android:gravity="left|center_vertical" >

            <TextView
                android:id="@+id/adapter_renwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center" >

            <TextView
                android:id="@+id/adapter_renwu_count"
                android:layout_width="@dimen/dimen_50x"
                android:layout_height="@dimen/dimen_50y"
                android:background="@color/red"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_35" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEE"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="抵质押品入库列表"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />


        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>
    <LinearLayout
          android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80y"
            android:layout_marginTop="@dimen/dimen_10y"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dzyp_"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="任务编号:"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30"/>

            <TextView
                android:id="@+id/dzypliebiao_title"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="2"
                android:textColor="@color/back"
                 android:textSize="@dimen/text_size_30" >
            </TextView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_60y"
         android:gravity="center_vertical"
         android:background="@color/white"
         android:layout_marginTop="@dimen/dimen_10y"
        android:orientation="horizontal" >

      <LinearLayout
         android:layout_width="@dimen/dimen_0x"
         android:layout_height="@dimen/dimen_60y"
         android:gravity="center_vertical"
         android:layout_weight="1"
        android:orientation="horizontal" >
        <TextView
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_weight="3"
            android:text="待扫描:"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />
 <TextView
            android:id="@+id/dzypif_lift"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="1"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />

        </LinearLayout>
          <LinearLayout
         android:layout_width="@dimen/dimen_0x"
         android:layout_height="@dimen/dimen_60y"
         android:gravity="center_vertical"
         android:layout_weight="1"
         android:orientation="horizontal" >
        <TextView
            tools:ignore="all"
            android:id="@+id/dzyp_"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="已扫描:"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_30" />

           <TextView
            android:id="@+id/dzypliebiao_right"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:layout_weight="1"
            android:text="5"
            android:textColor="@color/back"
             android:textSize="@dimen/text_size_30" >
        </TextView>

        </LinearLayout>
    </LinearLayout>
 <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="#E6E5E5" />
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_400y"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
         <ListView
                android:id="@+id/dzypsmlb_liftlistvieyisao"
                android:layout_width="@dimen/dimen_0x"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_8x"
                android:layout_marginRight="@dimen/dimen_8x"
                   android:divider="#00000000"
                android:layout_weight="1" >
            </ListView>
            <View
                android:layout_width="@dimen/dimen_1x"
                android:layout_height="match_parent"
                android:background="#E6E5E5" />

              <ListView
                android:id="@+id/dzypsmlb_rightlistview"
                android:layout_width="@dimen/dimen_0x"
                   android:divider="#00000000"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_8x"
                android:layout_marginRight="@dimen/dimen_8x"
                android:layout_weight="1" >
            </ListView>
        </LinearLayout>

 <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_80y"
         android:gravity="center_vertical"
         android:layout_marginTop="@dimen/dimen_15y"
        android:orientation="horizontal" >

    <Button
        android:layout_margin="5px"
        android:id="@+id/dpjd_rukubtn_sure"
        android:layout_width="@dimen/dimen_0x"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/buttom_selector_bg"
        android:textSize="@dimen/text_size_30"
        android:text="入库交接"
       />
    <Button
        android:layout_margin="5px"
        android:id="@+id/dpjd_rukubtnliebiao_cancle"
         android:layout_width="@dimen/dimen_0x"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/buttom_selector_bg"
        android:text="取消"
     android:textSize="@dimen/text_size_30"/>
</LinearLayout>
       </LinearLayout>
</LinearLayout>
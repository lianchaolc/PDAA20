<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bank_parent"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:background="@color/blue_title"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/dimen_80x"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/PDAsetting"
                android:layout_width="@dimen/dimen_40x"
                android:layout_height="@dimen/dimen_40y"
                android:src="@drawable/users" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_280x"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/login_title"
                android:textSize="@dimen/title_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="押运交接"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_100x"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/yayun_backS5"
                android:layout_width="@dimen/dimen_70x"
                android:layout_height="@dimen/dimen_70y"
                android:layout_marginRight="@dimen/dimen_10x"
                android:src="@drawable/back_change" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_520y"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20y" >

            <LinearLayout
                android:layout_width="@dimen/dimen_180x"
                android:layout_height="@dimen/dimen_80y"
                android:background="@color/blue_title"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:textSize="@dimen/text_size_35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请按手指"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_300x"
                android:layout_height="@dimen/dimen_80y"
                android:background="@color/blue_top"
                android:orientation="vertical"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textViewtop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_30" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/dimen_240x"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70y"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/username11"
                        android:textSize="@dimen/text_size_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网点人员"
                        android:textColor="@color/back" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_240y"
                    android:layout_marginBottom="@dimen/dimen_10y"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/yyjj_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70y"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/yy_leftName"
                        android:layout_width="@dimen/dimen_200x"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/blue_text_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_30" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_240x"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70y"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/username22"
                        android:textSize="@dimen/text_size_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网点人员"
                        android:textColor="@color/back" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_240y"
                    android:layout_marginBottom="@dimen/dimen_10y"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/yyzhiwen_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70y"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/yy_rightName"
                        android:layout_width="@dimen/dimen_200x"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/blue_text_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_30" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:background="@color/gray_msg_bg"
        android:gravity="center" >

        <TextView
            android:id="@+id/yanshi"
            android:textSize="@dimen/text_size_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70y"
            android:gravity="center"
            android:text="请第一位库管员按手指"
            android:textColor="@color/back" />
    </LinearLayout>

</LinearLayout>
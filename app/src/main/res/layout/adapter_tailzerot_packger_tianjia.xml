<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_5x"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50x"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tailzerotada_title_tv0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="a"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_20" />
        <TextView
            android:id="@+id/tailzerotada_title_tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textColor="@color/back"
            android:text="a12121212"
            android:textSize="@dimen/text_size_20" />


        <TextView
            android:id="@+id/tailzerotada_title_tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="a"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_20" />


        <TextView
            android:id="@+id/tailzerotada_title_tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="a"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_20" />


        <Button
            android:id="@+id/tailzerotada_title_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@color/white"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_25" />


    </LinearLayout>

</LinearLayout>
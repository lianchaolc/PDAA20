<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="制卡"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/ql_ruku_updatebtnzhika"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_120x"
            android:layout_marginTop="@dimen/dimen_4y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_60x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kj_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_5y"
        android:background="@color/white"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d6dde3" />

        <LinearLayout
            android:id="@+id/bagsendly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boder"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginTop="@dimen/dimen_10y"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="券 别:"
                    android:textColor="@color/bule_main"
                    android:textSize="@dimen/text_size_30" />

                <Spinner
                    android:id="@+id/sp_qunabeibuckc"
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15x"
                    android:layout_weight="1.5"
                    android:gravity="center|right"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/text_size_40" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bagsendbanbielin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20x"
                    android:layout_marginTop="@dimen/dimen_10y"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="版 别:"
                        android:textColor="@color/bule_main"
                        android:textSize="@dimen/text_size_30" />

                    <Spinner
                        android:id="@+id/sp_banbieckc"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_15x"
                        android:layout_weight="1.5"
                        android:gravity="center|right"
                        android:spinnerMode="dropdown"
                        android:textSize="@dimen/text_size_40" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginTop="@dimen/dimen_10y">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="尾零:"
                    android:textColor="@color/bule_main"
                    android:textSize="@dimen/text_size_30" />


                <Spinner
                    android:id="@+id/sp_weiling"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15x"
                    android:layout_weight="1.5"
                    android:gravity="center|right"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/text_size_40" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginTop="@dimen/dimen_10y">

                <TextView
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="完 损:"
                    android:textColor="@color/bule_main"
                    android:textSize="@dimen/text_size_30" />


                <Spinner
                    android:id="@+id/sp_quabzhongbuckc"
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15x"
                    android:layout_weight="1.5"
                    android:gravity="center|right"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/text_size_40" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginTop="@dimen/dimen_20y"
                android:gravity="center|left"
                android:text="卡  号:"
                android:textColor="@color/bule_main"
                android:textSize="@dimen/text_size_28" />


            <TextView
                android:id="@+id/bc_karid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_30y"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginTop="@dimen/dimen_10y"
                android:gravity="center|left"
                android:text=" "
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_marginTop="@dimen/dimen_20y"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/makecard_btn"
                android:layout_width="@dimen/dimen_45x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginRight="@dimen/dimen_8x"
                android:layout_weight="1"
                android:background="@drawable/buttom_selector_bg"
                android:text="制卡"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />

            <Button
                android:id="@+id/redad_btn"
                android:layout_width="@dimen/dimen_45x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_8x"
                android:layout_weight="1"
                android:background="@drawable/buttom_selector_bg"
                android:text="读卡"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="@dimen/dimen_8x"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bagginsend_copy_btn"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_weight="1"
                android:background="@drawable/buttom_selector_bg"
                android:text="复制"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />
            <Button
                android:id="@+id/updata_btn"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_weight="1"
                android:background="@drawable/buttom_selector_bg"
                android:text="数据提交"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d6dde3" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20x"
            android:layout_marginTop="@dimen/dimen_20y"
            android:gravity="center|left"
            android:text="已读卡号:"
            android:textColor="@color/bule_main"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:id="@+id/tv_readcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_marginTop="@dimen/dimen_10y"
            android:gravity="center|left"
            android:text=" "
            android:textColor="@color/back_2b"
            android:textSize="@dimen/text_size_28" />
    </LinearLayout>

</LinearLayout>
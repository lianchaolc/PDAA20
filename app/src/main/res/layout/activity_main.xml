<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RfidAdmin"
    android:background="#FFFFFF"
    android:id="@+id/main_box"
     >

    <LinearLayout
        android:id="@+id/mainparent"
        android:layout_width="@dimen/dimen_480x"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/bule_main"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lay_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_30y">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/dimen_480x"
                android:layout_height="@dimen/dimen_270y"
                android:src="@drawable/main" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30y"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home"
                    android:layout_width="@dimen/dimen_110x"
                    android:layout_height="@dimen/dimen_110y"
                    android:src="@drawable/meun_money" />

                <TextView
                    android:layout_marginTop="@dimen/dimen_20y"
                    android:textSize="@dimen/text_size_30"
                    android:textColor="@color/white"
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现钞管理" />

            </LinearLayout>

            <LinearLayout
                 android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                   android:textSize="@dimen/text_size_30"
                    android:textColor="@color/white"
                    android:id="@+id/systeset"
                    android:layout_width="@dimen/dimen_110x"
                    android:layout_height="@dimen/dimen_110y"
                    android:src="@drawable/system_admin" />

                <TextView
                    android:layout_marginTop="@dimen/dimen_20y"
                    android:textSize="@dimen/text_size_30"
                    android:textColor="@color/white"
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统设置" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/version"
                    android:layout_width="@dimen/dimen_110x"
                    android:layout_height="@dimen/dimen_110y"
                    android:src="@drawable/about" />

                <TextView
                    android:layout_marginTop="@dimen/dimen_20y"
                    android:textSize="@dimen/text_size_30"
                    android:textColor="@color/white"
                    android:text="版本更新"
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/showversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="11dp"
        android:text="1.22适用7.0" />

</RelativeLayout>
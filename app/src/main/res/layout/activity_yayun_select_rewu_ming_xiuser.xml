<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".YayunSelectRewuTookinfoAndTrueictivity" >
    <!-- 2020-05-22-查看1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title" >

        <LinearLayout
            android:layout_width="@dimen/dimen_72x"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_40x"
                android:layout_height="@dimen/dimen_40y"
                android:src="@drawable/out_atm_box" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >
.
            <TextView
                android:id="@+id/textView1"
                android:textSize="@dimen/text_size_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15y"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_marginTop="@dimen/dimen_25y"
                android:text="任务选择"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ac_yayun_selecrenwuminguserxiblack"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_100x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />

        <Button
            android:id="@+id/yyy_took_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_10y"
            android:background="@drawable/replace" />
    </LinearLayout>

    <TextView
        android:id="@+id/yy_XianluNameline"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_20y"
        android:text="线路名称"
        android:textColor="@color/back"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60y"
        android:layout_marginTop="@dimen/dimen_10y"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/orgname"
            android:textSize="@dimen/text_size_30"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="机构名称"
            android:textColor="@color/back" >
        </TextView>

        <TextView
            android:id="@+id/takeTask"
            android:textSize="@dimen/text_size_30"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="请领任务"
            android:textColor="@color/back" />

        <TextView
            android:id="@+id/uptask"
            android:textSize="@dimen/text_size_30"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="上缴任务"
            android:textColor="@color/back" >
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/listviewshowselect1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10y" />

</LinearLayout>
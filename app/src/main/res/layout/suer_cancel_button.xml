<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
     >

    <LinearLayout
        android:background="@color/gray_background"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="@dimen/dimen_400x"
        android:layout_height="@dimen/dimen_130y" >

        <LinearLayout
            android:layout_marginBottom="@dimen/dimen_20y"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_marginRight="@dimen/dimen_10x"
                android:background="@drawable/message"
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_25x"
                android:layout_height="@dimen/dimen_25y" />

            <TextView
                android:singleLine="false"
                android:textSize="@dimen/text_size_25"
                android:id="@+id/suercanceltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="要提示的内容"
                android:textColor="@color/back" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:layout_marginRight="@dimen/dimen_20x"
                android:textSize="@dimen/text_size_22"
                android:textColor="@color/white"
                android:background="@drawable/buttom_selector_bg"
                android:id="@+id/suerbtn"
                android:layout_width="@dimen/dimen_120x"
                android:layout_height="@dimen/dimen_50y"
                android:text="确定" />

            <Button
                android:id="@+id/cancelbtn"
                android:textSize="@dimen/text_size_22"
                android:textColor="@color/white"
                android:background="@drawable/buttom_selector_bg"
                android:layout_width="@dimen/dimen_120x"
                android:layout_height="@dimen/dimen_50y"
                android:text="取消" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
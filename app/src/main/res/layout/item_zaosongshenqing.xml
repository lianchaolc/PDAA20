<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_80y"
    android:background="#ffffff"
    android:orientation="horizontal" >

            <TextView
                android:id="@+id/s_boxId"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_30"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/s_state"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_30"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/isZaosong"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_80y"
                android:layout_marginLeft="@dimen/dimen_15x"
                android:focusable="false"
                android:gravity="center"/>
<!--    android:layout_marginLeft="@dimen/dimen_15x"-->
<!--    android:focusable="false"-->
<!--    android:gravity="center"-->
<!--    android:text="CheckBox"-->

            <EditText
                android:id="@+id/suokou_edit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:maxLength="10"
                android:textSize="@dimen/text_size_30" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="@color/white"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dimen_50y">

    <fragment
        android:id="@+id/fragment1"
            android:name="com.ljsw.tjbankpda.db.fragment.TopFragment_db"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" />
    
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_50x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_25x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="任务列表"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/renwu_update"
            android:layout_marginTop="@dimen/dimen_4y"
            android:layout_width="@dimen/dimen_50x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_75x"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/renwu_back"
            android:layout_width="@dimen/dimen_50x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/renwu_wangdian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_45" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/renwu_layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_50x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_25x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="出库操作"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/renwuliebiao_chuku_count"
            android:layout_width="@dimen/dimen_70x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_142x"
            android:background="@color/red"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/renwu_layout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_380y"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/renwulistview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/renwu_layout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_50x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_25x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="入库操作"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/renwuliebiao_ruku_count"
            android:layout_width="@dimen/dimen_70x"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_142x"
            android:background="@color/red"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_35" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/renwu_layout4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_380y"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/renwulistview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

</LinearLayout>
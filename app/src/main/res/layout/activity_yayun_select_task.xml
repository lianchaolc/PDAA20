<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:background="@color/gray_background"
    android:orientation="vertical"
    tools:context=".YayunSelectTaskActivity" >
<!-- 2020-05-22-查看2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70y"
            android:background="@color/blue_title"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:src="@drawable/u24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:text="线路名称列表"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_35" />

            <ImageView
                android:id="@+id/yyrw_update"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:layout_marginLeft="@dimen/dimen_30x"
                android:src="@drawable/replace" />

            <ImageView
                android:id="@+id/yayun_backS1"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_60y"
                android:src="@drawable/back_change" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_15y"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="线路编号"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="线路名称"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:layout_width="@dimen/dimen_0x"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="存在请领"
                    android:textColor="@color/back"
                    android:textSize="@dimen/text_size_30" />
            </LinearLayout>

            <ListView
                android:id="@+id/yyselectlistView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_350y"
                android:layout_marginTop="10dp" >
            </ListView>
        </LinearLayout>
         
    </LinearLayout>

</LinearLayout>
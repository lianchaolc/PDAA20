<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="10"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_75y"
        android:background="@color/back_2b" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30y"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:layout_marginTop="@dimen/dimen_2y"
            android:src="@drawable/replace" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_25"
            android:layout_marginTop="@dimen/dimen_8y"
            android:text="密码修改" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:gravity="center_vertical"
         >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_25"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:textColor="@color/back_2b"
            android:text="原密码："
            tools:ignore="all"/>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30y"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginLeft="@dimen/dimen_19x"
            android:paddingLeft="5dp"
            android:background="@drawable/edittext_biankuang"
            android:layout_marginRight="@dimen/dimen_8x"
            android:inputType="textPassword"
            tools:ignore="all">

            <requestFocus />
        </EditText>
        
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginRight="@dimen/dimen_8x"
        android:layout_marginLeft="@dimen/dimen_8x"
        android:background="@drawable/view_hr_backgroud"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_25"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:textColor="@color/back_2b"
            android:text="新密码："
            tools:ignore="all"/>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30y"
            android:layout_weight="1"
            android:ems="10"
            android:background="@drawable/edittext_biankuang"
            android:layout_marginLeft="@dimen/dimen_19x"
            android:paddingLeft="5dp"
            android:layout_marginRight="@dimen/dimen_8x"
            android:inputType="textPassword"
            tools:ignore="all">

            <requestFocus />
        </EditText>
        
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginRight="@dimen/dimen_8x"
        android:layout_marginLeft="@dimen/dimen_8x"
        android:background="@drawable/view_hr_backgroud"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120y"
        android:gravity="center_vertical"
         >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_25"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:textColor="@color/back_2b"
            android:text="再次输入："
            tools:ignore="all"/>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30y"
            android:layout_weight="1"
            android:ems="10"
            android:background="@drawable/edittext_biankuang"
            android:layout_marginRight="@dimen/dimen_8x"
            android:paddingLeft="5dp"
            android:inputType="textPassword"
            tools:ignore="all"
            >

            <requestFocus />
        </EditText>
        
    </LinearLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1y"
        android:layout_marginRight="@dimen/dimen_8x"
        android:layout_marginLeft="@dimen/dimen_8x"
        android:background="@drawable/view_hr_backgroud"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_8y"
        android:layout_height="@dimen/dimen_120y" >

        <Button
            android:id="@+id/dialig_bt1"
            android:layout_width="@dimen/dimen_180x"
            android:layout_height="@dimen/dimen_80y"
            android:textSize="@dimen/text_size_20"
            android:layout_marginRight="@dimen/dimen_4x"
            android:layout_marginLeft="@dimen/dimen_8x"
            android:textColor="@color/white"
            android:background="@drawable/buttom_selector_bg"
            android:text="确认" />

        <Button
            android:id="@+id/dialig_bt2"
            android:layout_width="@dimen/dimen_180x"
            android:layout_height="@dimen/dimen_80y"
            android:textSize="@dimen/text_size_20"
            android:layout_marginLeft="@dimen/dimen_4x"
            android:layout_marginRight="@dimen/dimen_8x"
            android:textColor="@color/white"
            android:background="@drawable/buttom_selector_bg"
            android:text="取消" />

    </LinearLayout>

</LinearLayout>
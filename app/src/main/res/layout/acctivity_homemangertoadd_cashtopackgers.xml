<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="现金装袋"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/ql_ruku_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_5y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kj_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

       

        <LinearLayout
            android:id="@+id/bagsendly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boder"
             android:layout_marginTop="@dimen/dimen_5y"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginTop="@dimen/dimen_10y"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="券 别:"
                    android:textColor="@color/bule_main"
                    android:textSize="@dimen/text_size_30" />

                <Spinner
                    android:id="@+id/sp_qunabeibu"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15x"
                    android:layout_weight="1.5"
                    android:gravity="center|right"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/text_size_40" />
            </LinearLayout>
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginTop="@dimen/dimen_10y"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="版别:"
                    android:textColor="@color/bule_main"
                    android:textSize="@dimen/text_size_30" />

                <Spinner
                    android:id="@+id/sp_banbie"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15x"
                    android:layout_weight="1.5"
                    android:gravity="center|right"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/text_size_40" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginTop="@dimen/dimen_10y" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="完 损:"
                    android:textColor="@color/bule_main"
                    android:textSize="@dimen/text_size_30" />

                <Spinner
                    android:id="@+id/sp_cansun"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15x"
                    android:layout_weight="1.5"
                    android:gravity="center|right"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/text_size_40" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linmoneyjine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_marginTop="@dimen/dimen_10y"
                android:layout_marginBottom="@dimen/dimen_10y"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="袋总额:"
                    android:textColor="@color/bule_main"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:id="@+id/tv_monecount"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15x"
                    android:layout_weight="1.5"
                    android:gravity="center|right"
                    android:textColor="@color/back"
                    android:text="200"
                    android:textSize="@dimen/text_size_40" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="万元"
                    android:textColor="@color/bule_main"
                    android:textSize="@dimen/text_size_30" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >
        
     

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_22x"
            android:gravity="center|left"
            android:text="读到卡号:"
            android:textColor="@color/bule_main"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:id="@+id/tv_bucard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50y"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_20x"
            android:gravity="center|left"
            android:text="CD1101219102398436723200"
            android:textSize="@dimen/text_size_35"
            android:textColor="@color/back"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_23x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_marginTop="@dimen/dimen_5y"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="券别:"
                android:textColor="@color/bule_main"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/cash_qunabeibu"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_weight="1.2"
                android:gravity="center"
                android:textColor="@color/back"
                android:text="100元（5套）"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_23x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_marginTop="@dimen/dimen_15y"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="版别:"
                android:textColor="@color/bule_main"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/cash_banbie"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_weight="1.2"
                android:gravity="center"
                android:textColor="@color/back"
                android:text=""
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80y"
            android:layout_marginLeft="@dimen/dimen_23x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_marginTop="@dimen/dimen_25y"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="残损:"
                android:textColor="@color/bule_main"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/cashcansun"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_weight="1.2"
                android:gravity="center"
                 android:textColor="@color/back"
                android:text="完整"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_23x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_marginTop="@dimen/dimen_25y"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                 android:text="袋总额:"
                android:textColor="@color/bule_main"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/cashreadmoney"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_5x"
                android:layout_marginLeft="@dimen/dimen_20x"
                android:layout_weight="1.3"
                android:gravity="center|right"
                android:text=""
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_30" />
              <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:layout_marginLeft="@dimen/dimen_20x"
                    android:text="万元"
                    android:textColor="@color/bule_main"
                    android:textSize="@dimen/text_size_30" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80y"
            android:layout_marginLeft="@dimen/dimen_20x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_marginTop="@dimen/dimen_10y"
            android:layout_marginBottom="@dimen/dimen_40y"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cashreadcard_btn"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_80y"
                android:layout_marginRight="@dimen/dimen_10x"
                android:layout_weight="1"
                android:background="@drawable/buttom_selector_bg"
                android:text="读卡"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_30" />

            <Button
                android:id="@+id/cashtoredadupdata_btn"
                android:layout_width="@dimen/dimen_60x"
                android:layout_height="@dimen/dimen_80y"
                android:layout_marginLeft="@dimen/dimen_10x"
                android:layout_weight="1"
                android:background="@drawable/buttom_selector_bg"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
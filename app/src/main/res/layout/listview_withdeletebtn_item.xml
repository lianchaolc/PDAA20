<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dimen_8x"
    android:layout_marginRight="@dimen/dimen_8x"
    android:layout_marginTop="@dimen/dimen_8y"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="#EFEEEE" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50y"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20y"
        android:background="@color/white"
        android:orientation="horizontal" >

      
        <TextView
            android:id="@+id/liebaiodizhiyapinitem"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_8x"
         
            android:layout_weight="1.5"
            android:gravity="center|left"
            android:text="1"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_22" />

      <TextView
            android:id="@+id/localnumber_tv"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:gravity="center|left"
            
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_22" />

        <Button
            android:id="@+id/liebaiodizhiyapintype"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_weight="1"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_22" />

       
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="#EFEEEE" >
    </View>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearlayout_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70y"
            android:background="@color/gray_background"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView02"
                android:textSize="@dimen/text_size_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:layout_weight="1"
                android:gravity="center"
                android:text="品牌信息"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/boxnum_detail"
                android:textSize="@dimen/text_size_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:text="钞箱编号"
                android:textColor="@color/red" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layout_notdata"
                android:visibility="gone"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/boxdetail_notdata"
                    android:textSize="@dimen/text_size_25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="目前服务器上暂时没有数据"
                    android:textColor="@color/back" />

              
            </LinearLayout>

            <ListView
                android:id="@+id/listview_boxdetial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_20y"
                android:layout_weight="1" >
            </ListView>
        </RelativeLayout>
      
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ljsw.checkcklibrarybydz.CheckLibraryFaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="抵押选柜子"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/checkelibrarydzface_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_100x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="@dimen/dimen_80y"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_marginRight="@dimen/dimen_10x"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="@dimen/dimen_80y"
                android:layout_weight="1"
                android:gravity="center"
                android:text="操作人:"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/checkelibrarydzname"
                android:layout_width="0dip"
                android:layout_height="@dimen/dimen_80y"
                android:layout_weight="1"
                android:gravity="center"
                android:text="白小白"
                android:textColor="@color/back"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_10x"
        android:layout_marginRight="@dimen/dimen_10x"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="@dimen/dimen_80y"
            android:layout_weight="1"
            android:gravity="center"
            android:text="柜面"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="@dimen/dimen_80y"
            android:layout_weight="1"
            android:gravity="center"
            android:text="数量"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_28" />
    </LinearLayout>

    <ListView
        android:id="@+id/listviewlibraryface"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_380y"
        android:layout_gravity="center" />

</LinearLayout>

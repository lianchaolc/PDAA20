<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEE"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="账户资料管理"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_50" />

        <Button
            android:id="@+id/ql_ruku_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_4y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:orientation="horizontal" >

          <LinearLayout
              android:id="@+id/aalaydizhiyapin"
              android:layout_width="@dimen/dimen_100x"
              android:layout_height="@dimen/dimen_250y"
              android:layout_marginLeft="@dimen/dimen_8x"
              android:layout_marginRight="@dimen/dimen_8x"
              android:layout_weight="1"
              android:gravity="center"
              android:orientation="vertical" >

              <ImageView
                  android:layout_width="@dimen/dimen_100x"
                  android:layout_height="@dimen/dimen_100y"
                  android:layout_weight="1"
                  android:background="@drawable/inroom2" />

              <TextView
                  android:id="@+id/zhanghuziliaoru"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dimen_39y"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:text="账户资料出入库管理"
                  android:textColor="@color/back"
                  android:textSize="@dimen/text_size_30" />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/aalaydizhiyapin"
              android:layout_width="@dimen/dimen_100x"
              android:layout_height="@dimen/dimen_250y"
              android:layout_marginLeft="@dimen/dimen_8x"
              android:layout_marginRight="@dimen/dimen_8x"
              android:layout_weight="1"
              android:gravity="center"
              android:orientation="vertical"
              tools:ignore="all">

              <ImageView
                  android:layout_width="@dimen/dimen_100x"
                  android:layout_height="@dimen/dimen_100y"
                  android:layout_weight="1"
                  android:background="@drawable/outroom2" />

              <TextView
                  android:id="@+id/zhanghuziliaola"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dimen_39y"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:text="账户资料货位管理"
                  android:textColor="@color/back"
                  android:textSize="@dimen/text_size_30" />
          </LinearLayout>
      </LinearLayout>

</LinearLayout>
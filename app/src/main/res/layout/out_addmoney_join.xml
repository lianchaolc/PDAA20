<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_480x"
    android:layout_height="@dimen/dimen_800y"
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_top"
        android:orientation="vertical" >
    </LinearLayout>

    <fragment
        android:id="@+id/f3"
        android:name="com.fragment.pda.HeadUser_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50y" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100y"
        android:background="@color/blue_title"
        android:orientation="horizontal" 
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" 
            android:layout_weight="4">

           <LinearLayout
                android:layout_width="@dimen/dimen_72x"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|right" >

                <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_40x"
                android:layout_height="@dimen/dimen_40y"
                android:src="@drawable/user_order" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" 
                android:gravity="center_vertical">
                
                <TextView
                android:id="@+id/webjoin_titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:textSize="@dimen/text_size_35"
                android:textColor="@color/white"
                android:text="网点加钞钞箱交接" 
                android:layout_marginLeft="@dimen/dimen_10x"/>
            </LinearLayout>
             
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1" >

            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/webjoin_back"
                android:layout_width="@dimen/dimen_70x"
                android:layout_height="@dimen/dimen_70y"
                android:src="@drawable/back_cirle" 
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_530y"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10x"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70y"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:text="所在位置:"
                android:textColor="@color/red"
                tools:ignore="all"
                />

            <Spinner
                android:padding="3px"
                android:gravity="center"
                android:layout_marginRight="@dimen/dimen_30x"
                android:background="@drawable/edit_border"
                android:spinnerMode="dropdown"
                android:id="@+id/spinn_out"
                android:layout_width="@dimen/dimen_330x"
                android:layout_height="@dimen/dimen_50y"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:layout_marginLeft="@dimen/dimen_10x"
                android:textSize="@dimen/text_size_25"
                android:textColor="@color/white"
                android:background="@drawable/buttom_selector_bg"
                android:id="@+id/webjoincheck"
                android:layout_width="@dimen/dimen_200x"
                android:layout_height="@dimen/dimen_50y"
                android:text="钞箱交接前检测" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_10x"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50y"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:text="需交接加钞钞箱数量:"
                android:textColor="@color/red"
                tools:ignore="all"/>

            <TextView
                android:id="@+id/join_need_num"
                android:textSize="@dimen/text_size_45"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:textSize="@dimen/text_size_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8x"
                android:text="需交接回收钞箱数量:"
                android:textColor="@color/red"
                tools:ignore="all"/>

            <TextView
                android:id="@+id/join_now_num"
                android:textSize="@dimen/text_size_45"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gray" />
            
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50y"
            android:orientation="horizontal" >

            <TextView
                android:gravity="center"
                android:textColor="@color/red"
                android:id="@+id/textView1"
                android:textSize="@dimen/text_size_25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="品牌信息" />

            <TextView
                android:id="@+id/editText2"
                android:textSize="@dimen/text_size_25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="钞箱编号"
                android:textColor="@color/red" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_280y"
            android:orientation="vertical" >

            <ListView
                android:background="@color/transparency"
                android:id="@+id/listwebjoin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_260y" >
            </ListView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center" >

        <Button
            android:enabled="false"
            android:textColor="@color/white"
            android:id="@+id/webatminfo"
            android:layout_width="@dimen/dimen_380x"
            android:layout_height="@dimen/dimen_60y"
            android:text="钞箱交接" 
            android:textSize="@dimen/text_size_30"
            android:background="@drawable/button_gray"/>

    </LinearLayout>

</LinearLayout>
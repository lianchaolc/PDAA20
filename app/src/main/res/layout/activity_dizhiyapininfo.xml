<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1f1f1"
    android:orientation="vertical" >
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80y"
        android:background="@color/blue_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:src="@drawable/user_order" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:text="地址押品"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_50" />

        <Button
            android:id="@+id/ql_ruku_update"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_15x"
            android:layout_marginTop="@dimen/dimen_4y"
            android:background="@drawable/replace" />

        <ImageView
            android:id="@+id/ql_ruku_back"
            android:layout_width="@dimen/dimen_60x"
            android:layout_height="@dimen/dimen_60y"
            android:layout_marginLeft="@dimen/dimen_10x"
            android:src="@drawable/back_cirle" />
    </LinearLayout>
    
 <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_80y"
         android:gravity="center_vertical"
         android:background="@color/white"
        android:orientation="horizontal" >

       
        <TextView
            android:id="@+id/dzyp_"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center"
            android:layout_weight="1"
            android:text="操作人员:"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:id="@+id/dzyp_username"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center|left"
            android:layout_weight="1"
            android:text="张三"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24" >
        </TextView>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" />

 <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_80y"
         android:gravity="center_vertical"
              android:background="@color/white"
        android:orientation="horizontal" >

       
        <TextView
            android:id="@+id/dzyp_"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center"
            android:layout_weight="1"
            android:text="入库单号:"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:id="@+id/dzyp_username"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center|left"
            android:layout_weight="1"
            android:text="RK20180908002"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24" >
        </TextView>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" />

        
    <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_120y"
              android:background="@color/white"
         android:gravity="center_vertical"
        android:orientation="horizontal" >

      <LinearLayout
         android:layout_width="@dimen/dimen_0x"
         android:layout_height="@dimen/dimen_100y"
         android:gravity="center_vertical"
         android:layout_weight="1"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/dzyp_"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center|right"
            android:layout_weight="3"
            android:text="已扫描数量:"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:id="@+id/dzypif_wei"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center|left"
            android:layout_weight="1"
            android:text="5"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24" >
        </TextView>
        </LinearLayout>
          <LinearLayout
         android:layout_width="@dimen/dimen_0x"
         android:layout_height="@dimen/dimen_80y"
         android:gravity="center_vertical"
         android:layout_weight="1"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/dzyp_"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="待扫描数量:"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:id="@+id/dzypif_yisao"
            android:layout_width="@dimen/dimen_0x"
            android:layout_height="@dimen/dimen_30y"
            android:gravity="center|left"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/back"
            android:textSize="@dimen/text_size_24" >
        </TextView>
        </LinearLayout>
    </LinearLayout>
 <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" />
  <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_100y"
         android:layout_marginLeft="@dimen/dimen_8x"
         android:layout_marginRight="@dimen/dimen_8x"
         android:gravity="center_vertical"
        android:orientation="horizontal" >

      <ListView
          android:id="@+id/dzypinlistview"
          android:layout_width="@dimen/dimen_0x"
         android:layout_height="@dimen/dimen_100y"
         android:layout_weight="1"
         android:layout_gravity="center"
          ></ListView> 
          <View
        android:layout_width="@dimen/dimen_1x"
        android:layout_height="match_parent"
        android:background="@color/back" />
       <ListView
          android:id="@+id/dzypinlistvieyisao"
          android:layout_width="@dimen/dimen_0x"
         android:layout_height="@dimen/dimen_100y"
         android:layout_gravity="center"
         android:layout_weight="1"
          ></ListView> 
    </LinearLayout>
  
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1y"
        android:background="@color/back" />
      <LinearLayout
        android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_80y"
         android:gravity="center_vertical"
         android:layout_marginTop="@dimen/dimen_30y"
        android:orientation="horizontal" >
       
    <Button
        android:layout_margin="5px"
        android:id="@+id/dpjdbtn_sure"
        android:layout_width="@dimen/dimen_0x"
        android:layout_height="@dimen/dimen_45y"
        android:layout_weight="1"
        android:background="@drawable/buttom_selector_bg"
        android:text="确定"
        android:textColor="@color/white" />
    <Button
            android:layout_margin="5px"
        android:id="@+id/btn_cancle"
         android:layout_width="@dimen/dimen_0x"
        android:layout_height="@dimen/dimen_45y"
        android:layout_weight="1"
        android:background="@drawable/buttom_selector_bg"
        android:text="取消"
        android:textColor="@color/white" />
</LinearLayout>
</LinearLayout>